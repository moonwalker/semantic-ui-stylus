/*******************************
            Theme
*******************************/

$ui_type    = 'collection';
$ui_element = 'menu';

@import '../../theme.config';

/*******************************
            Standard
*******************************/

/*--------------
      Menu
---------------*/

.ui.menu {
  display: flex;
  margin: $ui_margin;
  font-family: $ui_fontFamily;
  background: $ui_background;
  font-weight: $ui_fontWeight;
  border: $ui_border;
  box-shadow: $ui_boxShadow;
  border-radius: $ui_borderRadius;
  min-height: $ui_minHeight;
}

.ui.menu:after {
  content: '';
  display: block;
  height: 0px;
  clear: both;
  visibility: hidden;
}

.ui.menu:first-child {
  margin-top: 0rem;
}
.ui.menu:last-child {
  margin-bottom: 0rem;
}


/*--------------
    Sub-Menu
---------------*/

.ui.menu .menu {
  margin: 0em;
}

.ui.menu:not(.vertical) > .menu {
  display: flex;
}

/*--------------
      Item
---------------*/

.ui.menu:not(.vertical) .item {
  display: flex;
  align-items: center;
}

.ui.menu .item {
  position: relative;
  vertical-align: middle;
  line-height: 1;
  text-decoration: none;
  -webkit-tap-highlight-color: transparent;
  flex: 0 0 auto;
  user-select: none;

  background: $ui_itemBackground;
  padding: $ui_itemVerticalPadding $ui_itemHorizontalPadding;
  text-transform: $ui_itemTextTransform;
  color: $ui_itemTextColor;
  font-weight: $ui_itemFontWeight;
  transition: $ui_itemTransition;
}

.ui.menu > .item:first-child {
  border-radius: $ui_borderRadius 0px 0px $ui_borderRadius;
}

/* Border */
.ui.menu .item:before {
  position: absolute;
  content: '';
  top: 0%;
  right: 0px;
  height: 100%;

  width: $ui_dividerSize;
  background: $ui_dividerBackground;
}

/*--------------
  Text Content
---------------*/

.ui.menu .text.item > *,
.ui.menu .item > a:not(.ui),
.ui.menu .item > p:only-child {
  user-select: text;
  line-height: $ui_textLineHeight;
}
.ui.menu .item > p:first-child {
  margin-top: 0;
}
.ui.menu .item > p:last-child {
  margin-bottom: 0;
}

/*--------------
      Icons
---------------*/

.ui.menu .item > i.icon {
  opacity: $ui_iconOpacity;
  float: $ui_iconFloat;
  margin: $ui_iconMargin;
}

/*--------------
     Button
---------------*/

.ui.menu:not(.vertical) .item > .button {
  position: relative;
  top: $ui_buttonOffset;
  margin: $ui_buttonMargin;
  padding-bottom: $ui_buttonVerticalPadding;
  padding-top: $ui_buttonVerticalPadding;
  font-size: $ui_buttonSize;
}

/*----------------
 Grid / Container
-----------------*/

.ui.menu >  .grid,
.ui.menu > .container {
  display: flex;
  align-items: inherit;
  flex-direction: inherit;
}

/*--------------
     Inputs
---------------*/

.ui.menu .item > .input {
  width: 100%;
}
.ui.menu:not(.vertical) .item > .input {
  position: relative;
  top: $ui_inputOffset;
  margin: $ui_inputVerticalMargin 0em;
}
.ui.menu .item > .input input {
  font-size: $ui_inputSize;
  padding-top: $ui_inputVerticalPadding;
  padding-bottom: $ui_inputVerticalPadding;
}


/*--------------
     Header
---------------*/

.ui.menu .header.item,
.ui.vertical.menu .header.item {
  margin: 0em;
  background: $ui_headerBackground;
  text-transform: $ui_headerTextTransform;
  font-weight: $ui_headerWeight;
}

.ui.vertical.menu .item > .header:not(.ui) {
  margin: $ui_verticalHeaderMargin;
  font-size: $ui_verticalHeaderFontSize;
  font-weight: $ui_verticalHeaderFontWeight;
}

/*--------------
    Dropdowns
---------------*/


/* Dropdown Icon */
.ui.menu .item > i.dropdown.icon {
  padding: 0em;
  float: $ui_dropdownIconFloat;
  margin: 0em 0em 0em $ui_dropdownIconDistance;
}

/* Menu */
.ui.menu .dropdown.item .menu {
  min-width: unquote("calc(100% - 1px)") ;
  border-radius: 0em 0em $ui_dropdownMenuBorderRadius $ui_dropdownMenuBorderRadius;
  background: $ui_dropdownBackground;
  margin: $ui_dropdownMenuDistance 0px 0px;
  box-shadow: $ui_dropdownMenuBoxShadow;
  flex-direction: column !important;
}


/* Menu Items */
.ui.menu .ui.dropdown .menu > .item {
  margin: 0;
  text-align: left;
  font-size: $ui_dropdownItemFontSize !important;
  padding: $ui_dropdownItemPadding !important;
  background: $ui_dropdownItemBackground !important;
  color: $ui_dropdownItemColor !important;
  text-transform: $ui_dropdownItemTextTransform !important;
  font-weight: $ui_dropdownItemFontWeight !important;
  box-shadow: $ui_dropdownItemBoxShadow !important;
  transition: $ui_dropdownItemTransition !important;
}
.ui.menu .ui.dropdown .menu > .item:hover {
  background: $ui_dropdownHoveredItemBackground !important;
  color: $ui_dropdownHoveredItemColor !important;
}
.ui.menu .ui.dropdown .menu > .selected.item {
  background: $ui_dropdownSelectedItemBackground !important;
  color: $ui_dropdownSelectedItemColor !important;
}
.ui.menu .ui.dropdown .menu > .active.item {
  background: $ui_dropdownActiveItemBackground !important;
  font-weight: $ui_dropdownActiveItemFontWeight !important;
  color: $ui_dropdownActiveItemColor !important;
}

.ui.menu .ui.dropdown.item .menu .item:not(.filtered) {
  display: block;
}
.ui.menu .ui.dropdown .menu > .item .icon:not(.dropdown) {
  display: inline-block;
  font-size: $ui_dropdownItemIconFontSize !important;
  float: $ui_dropdownItemIconFloat;
  margin: $ui_dropdownItemIconMargin;
}


/* Secondary */
.ui.secondary.menu .dropdown.item > .menu,
.ui.text.menu .dropdown.item > .menu {
  border-radius: $ui_dropdownMenuBorderRadius;
  margin-top: $ui_secondaryDropdownMenuDistance;
}

/* Pointing */
.ui.menu .pointing.dropdown.item .menu {
  margin-top: $ui_pointingDropdownMenuDistance;
}

/* Inverted */
.ui.inverted.menu .search.dropdown.item > .search,
.ui.inverted.menu .search.dropdown.item > .text {
  color: $ui_invertedSelectionDropdownColor;
}

/* Vertical */
.ui.vertical.menu .dropdown.item > .icon {
  float: right;
  content: "\f0da";
  margin-left: 1em;
}
.ui.vertical.menu .dropdown.item .menu {
  left: 100%;
  min-width: 0;
  margin: 0em 0em 0em $ui_dropdownMenuDistance;
  box-shadow: $ui_dropdownVerticalMenuBoxShadow;
  border-radius: 0em $ui_dropdownMenuBorderRadius $ui_dropdownMenuBorderRadius $ui_dropdownMenuBorderRadius;
}
.ui.vertical.menu .dropdown.item.upward .menu {
  bottom: 0;
}
.ui.vertical.menu .dropdown.item:not(.upward) .menu {
  top: 0;
}
.ui.vertical.menu .active.dropdown.item {
  border-top-right-radius: 0em;
  border-bottom-right-radius: 0em;
}
.ui.vertical.menu .dropdown.active.item {
  box-shadow: none;
}

/* Evenly Divided */
.ui.item.menu .dropdown .menu .item {
  width: 100%;
}

/*--------------
     Labels
---------------*/

.ui.menu .item > .label {
  background: $ui_labelBackground;
  color: $ui_labelTextColor;
  margin-left: $ui_labelTextMargin;
  padding: $ui_labelVerticalPadding $ui_labelHorizontalPadding;
}
.ui.vertical.menu .item > .label {
  background: $ui_labelBackground;
  color: $ui_labelTextColor;
  margin-top: $ui_labelOffset;
  margin-bottom: $ui_labelOffset;
  padding: $ui_labelVerticalPadding $ui_labelHorizontalPadding;
}
.ui.menu .item > .floating.label {
  padding: $ui_labelVerticalPadding $ui_labelHorizontalPadding;
}

/*--------------
     Images
---------------*/

.ui.menu .item > img:not(.ui) {
  display: inline-block;
  vertical-align: middle;
  margin: $ui_imageMargin;
  width: $ui_imageWidth;
}
.ui.vertical.menu .item > img:not(.ui):only-child {
  display: block;
  max-width: 100%;
  width: $ui_verticalImageWidth;
}

/*******************************
          Coupling
*******************************/

/*--------------
     List
---------------*/

/* Menu divider shouldnt apply */
.ui.menu .list .item:before {
  background: none !important;
}

/*--------------
     Sidebar
---------------*/

/* Show vertical dividers below last */

.ui.vertical.sidebar.menu > .item:first-child:before {
  display: block !important;
}
.ui.vertical.sidebar.menu > .item::before {
  top: auto;
  bottom: 0px;
}

/*--------------
    Container
---------------*/

@media only screen and (max-width: $ui_largestMobileScreen) {
  .ui.menu > .ui.container {
    width: 100% !important;
    margin-left: 0em !important;
    margin-right: 0em !important;
  }
}
@media only screen and (min-width: $ui_tabletBreakpoint) {
  .ui.menu:not(.secondary):not(.text):not(.tabular):not(.borderless) > .container > .item:not(.right):not(.borderless):first-child {
    border-left: $ui_dividerSize solid $ui_dividerBackground;
  }
}


/*******************************
             States
*******************************/

/*--------------
      Hover
---------------*/


.ui.link.menu .item:hover,
.ui.menu .dropdown.item:hover,
.ui.menu .link.item:hover,
.ui.menu a.item:hover {
  cursor: pointer;
  background: $ui_hoverItemBackground;
  color: $ui_hoverItemTextColor;
}


/*--------------
     Pressed
---------------*/

.ui.link.menu .item:active,
.ui.menu .link.item:active,
.ui.menu a.item:active {
  background: $ui_pressedItemBackground;
  color: $ui_pressedItemTextColor;
}


/*--------------
     Active
---------------*/

.ui.menu .active.item  {
  background: $ui_activeItemBackground;
  color: $ui_activeItemTextColor;
  font-weight: $ui_activeItemFontWeight;
  box-shadow: $ui_activeItemBoxShadow;
}
.ui.menu .active.item > i.icon {
  opacity: $ui_activeIconOpacity;
}

/*--------------
  Active Hover
---------------*/

.ui.menu .active.item:hover,
.ui.vertical.menu .active.item:hover {
  background-color: $ui_activeHoverItemBackground;
  color: $ui_activeHoverItemColor;
}


/*--------------
     Disabled
---------------*/

.ui.menu .item.disabled,
.ui.menu .item.disabled:hover {
  cursor: default;
  background-color: transparent !important;
  color: $ui_disabledTextColor;
}


/*******************************
             Types
*******************************/

/*------------------
Floated Menu / Item
-------------------*/

/* Left Floated */
.ui.menu:not(.vertical) .left.item,
.ui.menu:not(.vertical) .left.menu {
  display: flex;
  margin-right: auto !important;
}
/* Right Floated */
.ui.menu:not(.vertical) .right.item,
.ui.menu:not(.vertical) .right.menu {
  display: flex;
  margin-left: auto !important;
}

/* Swapped Borders */
.ui.menu .right.item::before,
.ui.menu .right.menu > .item::before {
  right: auto;
  left: 0;
}


/*--------------
    Vertical
---------------*/

.ui.vertical.menu {
  display: block;
  flex-direction: column;
  background: $ui_verticalBackground;
  box-shadow: $ui_verticalBoxShadow;
}

/*--- Item ---*/
.ui.vertical.menu .item {
  display: block;
  background: $ui_verticalItemBackground;
  border-top: none;
  border-right: none;
}
.ui.vertical.menu > .item:first-child {
  border-radius: $ui_borderRadius $ui_borderRadius 0px 0px;
}
.ui.vertical.menu > .item:last-child {
  border-radius: 0px 0px $ui_borderRadius $ui_borderRadius;
}

/*--- Label ---*/
.ui.vertical.menu .item > .label {
  float: right;
  text-align: center;
}

/*--- Icon ---*/
.ui.vertical.menu .item > i.icon {
  width: $ui_iconWidth;
  float: $ui_verticalIconFloat;
  margin: $ui_verticalIconMargin;
}
.ui.vertical.menu .item > .label + i.icon {
  float: $ui_labelAndIconFloat;
  margin: $ui_labelAndIconMargin;
}


/*--- Border ---*/
.ui.vertical.menu .item:before {
  position: absolute;
  content: '';
  top: 0%;
  left: 0px;
  width: 100%;
  height: $ui_dividerSize;
  background: $ui_verticalDividerBackground;
}

.ui.vertical.menu .item:first-child:before {
  display: none !important;
}


/*--- Sub Menu ---*/
.ui.vertical.menu .item > .menu {
  margin: $ui_subMenuMargin;
}
.ui.vertical.menu .menu .item {
  background: none;
  padding: $ui_subMenuVerticalPadding $ui_subMenuHorizontalPadding;
  font-size: $ui_subMenuFontSize;
  color: $ui_subMenuTextColor;
}
.ui.vertical.menu .item .menu a.item:hover,
.ui.vertical.menu .item .menu .link.item:hover {
  color: $ui_darkTextColor;
}
.ui.vertical.menu .menu .item:before {
  display: none;
}

/* Vertical Active */
.ui.vertical.menu .active.item {
  background: $ui_activeItemBackground;
  border-radius: 0em;
  box-shadow: $ui_verticalActiveBoxShadow;
}
.ui.vertical.menu > .active.item:first-child {
  border-radius: $ui_borderRadius $ui_borderRadius 0em 0em;
}
.ui.vertical.menu > .active.item:last-child {
  border-radius: 0em 0em $ui_borderRadius $ui_borderRadius;
}
.ui.vertical.menu > .active.item:only-child {
  border-radius: $ui_borderRadius;
}
.ui.vertical.menu .active.item .menu .active.item {
  border-left: none;
}
.ui.vertical.menu .item .menu .active.item {
  background-color: $ui_subMenuActiveBackground;
  font-weight: $ui_subMenuActiveFontWeight;
  color: $ui_subMenuActiveTextColor;
}


/*--------------
     Tabular
---------------*/

.ui.tabular.menu {
  border-radius: 0em;
  box-shadow: none !important;
  border: none;
  background: $ui_tabularBackground;
  border-bottom: $ui_tabularBorderWidth solid $ui_tabularBorderColor;
}
.ui.tabular.fluid.menu {
  width: $ui_tabularFluidWidth !important;
}
.ui.tabular.menu .item {
  background: transparent;
  border-bottom: none;

  border-left: $ui_tabularBorderWidth solid transparent;
  border-right: $ui_tabularBorderWidth solid transparent;
  border-top: $ui_tabularOppositeBorderWidth solid transparent;
  padding: $ui_tabularVerticalPadding $ui_tabularHorizontalPadding;
  color: $ui_tabularTextColor;
}
.ui.tabular.menu .item:before {
  display: none;
}

/* Hover */
.ui.tabular.menu .item:hover {
  background-color: transparent;
  color: $ui_tabularHoveredTextColor;
}

/* Active */
.ui.tabular.menu .active.item {
  background: $ui_tabularActiveBackground;
  color: $ui_tabularActiveColor;
  border-top-width: $ui_tabularBorderWidth;
  border-color: $ui_tabularBorderColor;
  font-weight: $ui_tabularActiveWeight;
  margin-bottom: (- $ui_tabularBorderWidth);
  box-shadow: $ui_tabularActiveBoxShadow;
  border-radius: $ui_tabularBorderRadius $ui_tabularBorderRadius 0px 0px !important;
}

/* Coupling with segment for attachment */
.ui.tabular.menu + .attached:not(.top).segment,
.ui.tabular.menu + .attached:not(.top).segment + .attached:not(.top).segment {
  border-top: none;
  margin-left: 0px;
  margin-top: 0px;
  margin-right: 0px;
  width: 100%;
}
.top.attached.segment + .ui.bottom.tabular.menu {
  position: relative;
  width: $ui_tabularFluidWidth;
  left: (- $ui_tabularFluidOffset);
}

/* Bottom Vertical Tabular */
.ui.bottom.tabular.menu {
  background: $ui_tabularBackground;
  border-radius: 0em;
  box-shadow: none !important;
  border-bottom: none;
  border-top: $ui_tabularBorderWidth solid $ui_tabularBorderColor;
}
.ui.bottom.tabular.menu .item {
  background: none;
  border-left: $ui_tabularBorderWidth solid transparent;
  border-right: $ui_tabularBorderWidth solid transparent;
  border-bottom: $ui_tabularBorderWidth solid transparent;
  border-top: none;
}
.ui.bottom.tabular.menu .active.item {
  background: $ui_tabularActiveBackground;
  color: $ui_tabularActiveColor;
  border-color: $ui_tabularBorderColor;
  margin: (- $ui_tabularBorderWidth) 0px 0px 0px;
  border-radius: 0px 0px $ui_tabularBorderRadius $ui_tabularBorderRadius !important;
}

/* Vertical Tabular (Left) */
.ui.vertical.tabular.menu {
  background: $ui_tabularVerticalBackground;
  border-radius: 0em;
  box-shadow: none !important;
  border-bottom: none;
  border-right: $ui_tabularBorderWidth solid $ui_tabularBorderColor;
}
.ui.vertical.tabular.menu .item {
  background: none;
  border-left: $ui_tabularBorderWidth solid transparent;
  border-bottom: $ui_tabularBorderWidth solid transparent;
  border-top: $ui_tabularBorderWidth solid transparent;
  border-right: none;
}
.ui.vertical.tabular.menu .active.item {
  background: $ui_tabularActiveBackground;
  color: $ui_tabularActiveColor;
  border-color: $ui_tabularBorderColor;
  margin: 0px (- $ui_tabularBorderWidth) 0px 0px;
  border-radius: $ui_tabularBorderRadius 0px 0px $ui_tabularBorderRadius !important;
}

/* Vertical Right Tabular */
.ui.vertical.right.tabular.menu {
  background: $ui_tabularVerticalBackground;
  border-radius: 0em;
  box-shadow: none !important;
  border-bottom: none;
  border-right: none;
  border-left: $ui_tabularBorderWidth solid $ui_tabularBorderColor;
}
.ui.vertical.right.tabular.menu .item {
  background: none;
  border-right: $ui_tabularBorderWidth solid transparent;
  border-bottom: $ui_tabularBorderWidth solid transparent;
  border-top: $ui_tabularBorderWidth solid transparent;
  border-left: none;
}
.ui.vertical.right.tabular.menu .active.item {
  background: $ui_tabularActiveBackground;
  color: $ui_tabularActiveColor;
  border-color: $ui_tabularBorderColor;
  margin: 0px 0px 0px (- $ui_tabularBorderWidth);
  border-radius: 0px $ui_tabularBorderRadius $ui_tabularBorderRadius 0px !important;
}

/* Dropdown */
.ui.tabular.menu .active.dropdown.item {
  margin-bottom: 0px;
  border-left: $ui_tabularBorderWidth solid transparent;
  border-right: $ui_tabularBorderWidth solid transparent;
  border-top: $ui_tabularOppositeBorderWidth solid transparent;
  border-bottom: none;
}



/*--------------
   Pagination
---------------*/

.ui.pagination.menu {
  margin: 0em;
  display: inline-flex;
  vertical-align: middle;
}
.ui.pagination.menu .item:last-child {
  border-radius: 0em $ui_borderRadius $ui_borderRadius 0em;
}
.ui.compact.menu .item:last-child {
  border-radius: 0em $ui_borderRadius $ui_borderRadius 0em;
}
.ui.pagination.menu .item:last-child:before {
  display: none;
}

.ui.pagination.menu .item {
  min-width: $ui_paginationMinWidth;
  text-align: center;
}
.ui.pagination.menu .icon.item i.icon {
  vertical-align: top;
}

/* Active */
.ui.pagination.menu .active.item {
  border-top: none;
  padding-top: $ui_itemVerticalPadding;
  background-color: $ui_paginationActiveBackground;
  color: $ui_paginationActiveTextColor;
  box-shadow: none;
}

/*--------------
   Secondary
---------------*/

.ui.secondary.menu {
  background: $ui_secondaryBackground;
  margin-left: (- $ui_secondaryItemSpacing);
  margin-right: (- $ui_secondaryItemSpacing);
  border-radius: 0em;
  border: none;
  box-shadow: none;
}

/* Item */
.ui.secondary.menu .item {
  align-self: center;
  box-shadow: none;
  border: none;
  padding: $ui_secondaryItemPadding;
  margin: $ui_secondaryItemMargin;
  background: $ui_secondaryItemBackground;
  transition: $ui_secondaryItemTransition;
  border-radius: $ui_secondaryItemBorderRadius;
}

/* No Divider */
.ui.secondary.menu .item:before {
  display: none !important;
}

/* Header */
.ui.secondary.menu .header.item {
  border-radius: 0em;
  border-right: $ui_secondaryHeaderBorder;
  background: $ui_secondaryHeaderBackground;
}

/* Image */
.ui.secondary.menu .item > img:not(.ui) {
  margin: 0em;
}

/* Hover */
.ui.secondary.menu .dropdown.item:hover,
.ui.secondary.menu .link.item:hover,
.ui.secondary.menu a.item:hover {
  background: $ui_secondaryHoverItemBackground;
  color: $ui_secondaryHoverItemColor;
}

/* Active */
.ui.secondary.menu .active.item {
  box-shadow: none;
  background: $ui_secondaryActiveItemBackground;
  color: $ui_secondaryActiveItemColor;
  border-radius: $ui_secondaryItemBorderRadius;
}

/* Active Hover */
.ui.secondary.menu .active.item:hover {
  box-shadow: none;
  background: $ui_secondaryActiveHoverItemBackground;
  color: $ui_secondaryActiveHoverItemColor;
}


/* Inverted */
.ui.secondary.inverted.menu .link.item,
.ui.secondary.inverted.menu a.item {
  color: $ui_secondaryInvertedColor !important;
}
.ui.secondary.inverted.menu .dropdown.item:hover,
.ui.secondary.inverted.menu .link.item:hover,
.ui.secondary.inverted.menu a.item:hover {
  background: $ui_secondaryInvertedHoverBackground;
  color: $ui_secondaryInvertedHoverColor !important;
}
.ui.secondary.inverted.menu .active.item {
  background: $ui_secondaryInvertedActiveBackground;
  color: $ui_secondaryInvertedActiveColor !important;
}

/* Fix item margins */
.ui.secondary.item.menu {
  margin-left: 0em;
  margin-right: 0em;
}
.ui.secondary.item.menu .item:last-child {
  margin-right: 0em;
}
.ui.secondary.attached.menu {
  box-shadow: none;
}

/* Sub Menu */
.ui.vertical.secondary.menu .item:not(.dropdown) > .menu {
  margin: $ui_secondaryMenuSubMenuMargin;
}
.ui.vertical.secondary.menu .item:not(.dropdown) > .menu > .item {
  margin: $ui_secondaryMenuSubMenuItemMargin;
  padding: $ui_secondaryMenuSubMenuItemPadding;
}


/*---------------------
   Secondary Vertical
-----------------------*/

.ui.secondary.vertical.menu > .item {
  border: none;
  margin: $ui_secondaryVerticalItemMargin;
  border-radius: $ui_secondaryVerticalItemBorderRadius !important;
}
.ui.secondary.vertical.menu > .header.item {
  border-radius: 0em;
}

/* Sub Menu */
.ui.vertical.secondary.menu .item > .menu .item {
  background-color: transparent;
}

/* Inverted */
.ui.secondary.inverted.menu {
  background-color: transparent;
}

/*---------------------
   Secondary Pointing
-----------------------*/

.ui.secondary.pointing.menu {
  margin-left: 0em;
  margin-right: 0em;
  border-bottom: $ui_secondaryPointingBorderWidth solid $ui_secondaryPointingBorderColor;
}

.ui.secondary.pointing.menu .item {
  border-bottom-color: transparent;
  border-bottom-style: solid;
  border-radius: 0em;
  align-self: flex-end;

  margin: 0em 0em (- $ui_secondaryPointingBorderWidth);
  padding: $ui_secondaryPointingItemVerticalPadding $ui_secondaryPointingItemHorizontalPadding;
  border-bottom-width: $ui_secondaryPointingBorderWidth;
  transition: $ui_secondaryItemTransition;
}

/* Item Types */
.ui.secondary.pointing.menu .header.item {
  color: $ui_secondaryPointingHeaderColor !important;
}
.ui.secondary.pointing.menu .text.item {
  box-shadow: none !important;
}
.ui.secondary.pointing.menu .item:after {
  display: none;
}

/* Hover */
.ui.secondary.pointing.menu .dropdown.item:hover,
.ui.secondary.pointing.menu .link.item:hover,
.ui.secondary.pointing.menu a.item:hover {
  background-color: transparent;
  color: $ui_secondaryPointingHoverTextColor;
}

/* Pressed */
.ui.secondary.pointing.menu .dropdown.item:active,
