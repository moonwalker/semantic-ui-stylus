/*******************************
            Theme
*******************************/

$ui_type    = 'collection';
$ui_element = 'message';

@import '../../theme.config';

/*******************************
            Message
*******************************/

.ui.message {
  position: relative;
  min-height: 1em;
  margin: $ui_verticalMargin 0em;
  background: $ui_background;
  padding: $ui_padding;
  line-height: $ui_lineHeight;
  color: $ui_textColor;
  transition: $ui_transition;
  border-radius: $ui_borderRadius;
  box-shadow: $ui_boxShadow;
}

.ui.message:first-child {
  margin-top: 0em;
}
.ui.message:last-child {
  margin-bottom: 0em;
}


/*--------------
     Content
---------------*/

/* Header */
.ui.message .header {
  display: $ui_headerDisplay;
  font-family: $ui_headerFont;
  font-weight: $ui_headerFontWeight;
  margin: $ui_headerMargin;
}

/* Default font size */
.ui.message .header:not(.ui) {
  font-size: $ui_headerFontSize;
}

/* Paragraph */
.ui.message p {
  opacity: $ui_messageTextOpacity;
  margin: $ui_messageParagraphMargin 0em;
}
.ui.message p:first-child {
  margin-top: 0em;
}
.ui.message p:last-child {
  margin-bottom: 0em;
}
.ui.message .header + p {
  margin-top: $ui_headerParagraphDistance;
}

/* List */
.ui.message .list:not(.ui) {
  text-align: left;
  padding: 0em;
  opacity: $ui_listOpacity;
  list-style-position: $ui_listStylePosition;
  margin: $ui_listMargin 0em 0em;
}
.ui.message .list:not(.ui):first-child {
  margin-top: 0em;
}
.ui.message .list:not(.ui):last-child {
  margin-bottom: 0em;
}
.ui.message .list:not(.ui) li {
  position: relative;
  list-style-type: none;
  margin: 0em 0em $ui_listItemMargin $ui_listItemIndent;
  padding: 0em;
}
.ui.message .list:not(.ui) li:before {
  position: absolute;
  content: 'â€¢';
  left: -1em;
  height: 100%;
  vertical-align: baseline;
}
.ui.message .list:not(.ui) li:last-child {
  margin-bottom: 0em;
}


/* Icon */
.ui.message > .icon {
  margin-right: $ui_iconDistance;
}

/* Close Icon */
.ui.message > .close.icon {
  cursor: pointer;
  position: absolute;
  margin: 0em;
  top: $ui_closeTopDistance;
  right: $ui_closeRightDistance;
  opacity: $ui_closeOpacity;
  transition: $ui_closeTransition;
}
.ui.message > .close.icon:hover {
  opacity: 1;
}

/* First / Last Element */
.ui.message > :first-child {
  margin-top: 0em;
}
.ui.message > :last-child {
  margin-bottom: 0em;
}

/*******************************
            Coupling
*******************************/

.ui.dropdown .menu > .message {
  margin: 0px (- $ui_borderWidth);
}

/*******************************
            States
*******************************/

/*--------------
    Visible
---------------*/

.ui.visible.visible.visible.visible.message {
  display: block;
}

.ui.icon.visible.visible.visible.visible.message {
  display: flex;
}

/*--------------
     Hidden
---------------*/

.ui.hidden.hidden.hidden.hidden.message {
  display: none;
}


/*******************************
            Variations
*******************************/

/*--------------
    Compact
---------------*/

.ui.compact.message {
  display: inline-block;
}
.ui.compact.icon.message {
  display: inline-flex;
}


/*--------------
    Attached
---------------*/

.ui.attached.message {
  margin-bottom: $ui_attachedYOffset;
  border-radius: $ui_borderRadius $ui_borderRadius 0em 0em;
  box-shadow: $ui_attachedBoxShadow;
  margin-left: $ui_attachedXOffset;
  margin-right: $ui_attachedXOffset;
}
.ui.attached + .ui.attached.message:not(.top):not(.bottom) {
  margin-top: $ui_attachedYOffset;
  border-radius: 0em;
}
.ui.bottom.attached.message {
  margin-top: $ui_attachedYOffset;
  border-radius: 0em 0em $ui_borderRadius $ui_borderRadius;
  box-shadow: $ui_attachedBottomBoxShadow;
}
.ui.bottom.attached.message:not(:last-child) {
  margin-bottom: $ui_verticalMargin;
}
.ui.attached.icon.message {
  width: auto;
}


/*--------------
      Icon
---------------*/

.ui.icon.message {
  display: flex;
  width: 100%;
  align-items: center;
}
.ui.icon.message > .icon:not(.close) {
  display: block;
  flex: 0 0 auto;
  width: auto;
  line-height: 1;
  vertical-align: $ui_iconVerticalAlign;
  font-size: $ui_iconSize;
  opacity: $ui_iconOpacity;
}
.ui.icon.message > .content {
  display: block;
  flex: 1 1 auto;
  vertical-align: $ui_iconVerticalAlign;
}


.ui.icon.message .icon:not(.close) + .content {
  padding-left: $ui_iconContentDistance;
}
.ui.icon.message .circular.icon {
  width: 1em;
}

/*--------------
    Floating
---------------*/

.ui.floating.message {
  box-shadow: $ui_floatingBoxShadow;
}


/*--------------
     Colors
---------------*/

.ui.black.message {
  background-color: $ui_black;
  color: $ui_invertedTextColor;
}

