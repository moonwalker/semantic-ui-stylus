  margin-left: $ui_attachedOffset;
  margin-right: $ui_attachedOffset;
  box-shadow: $ui_attachedBoxShadow;
  border: $ui_attachedBorder;
}
.ui.attached.block.header {
  background: $ui_blockBackground;
}

.ui.attached:not(.top):not(.bottom).header {
  margin-top: 0em;
  margin-bottom: 0em;
  border-top: none;
  border-radius: 0em;
}
.ui.top.attached.header {
