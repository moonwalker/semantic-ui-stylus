/*******************************
            Theme
*******************************/

$ui_type    = 'element';
$ui_element = 'header';

@import '../../theme.config';


/*******************************
            Header
*******************************/

/* Standard */
.ui.header {
  border: none;
  margin: $ui_margin;
  padding: $ui_verticalPadding $ui_horizontalPadding;
  font-family: $ui_fontFamily;
  font-weight: $ui_fontWeight;
  line-height: $ui_lineHeight;
  text-transform: $ui_textTransform;
  color: $ui_textColor;
}

.ui.header:first-child {
  margin-top: $ui_firstMargin;
}
.ui.header:last-child {
  margin-bottom: $ui_lastMargin;
}

/*--------------
   Sub Header
---------------*/

.ui.header .sub.header {
  display: block;
  font-weight: normal;
  padding: 0em;
  margin: $ui_subHeaderMargin;
  font-size: $ui_subHeaderFontSize;
  line-height: $ui_subHeaderLineHeight;
  color: $ui_subHeaderColor;
}

/*--------------
      Icon
---------------*/

.ui.header > .icon {
  display: table-cell;
  opacity: $ui_iconOpacity;
  font-size: $ui_iconSize;
  padding-top: $ui_iconOffset;
  vertical-align: $ui_iconAlignment;
}

/* With Text Node */
.ui.header .icon:only-child {
  display: inline-block;
  padding: 0em;
  margin-right: $ui_iconMargin;
}

/*-------------------
        Image
--------------------*/

.ui.header > .image,
.ui.header > img {
  display: inline-block;
  margin-top: $ui_imageOffset;
  width: $ui_imageWidth;
  height: $ui_imageHeight;
  vertical-align: $ui_imageAlignment;
}
.ui.header > .image:only-child,
.ui.header > img:only-child {
  margin-right: $ui_imageMargin;
}

/*--------------
     Content
---------------*/

.ui.header .content {
  display: inline-block;
  vertical-align: $ui_contentAlignment;
}

/* After Image */
.ui.header > img + .content,
.ui.header > .image + .content {
  padding-left: $ui_imageMargin;
  vertical-align: $ui_contentImageAlignment;
}

/* After Icon */
.ui.header > .icon + .content {
  padding-left: $ui_iconMargin;
  display: table-cell;
  vertical-align: $ui_contentIconAlignment;
}


/*--------------
 Loose Coupling
---------------*/

.ui.header .ui.label {
  font-size: $ui_labelSize;
  margin-left: $ui_labelDistance;
  vertical-align: $ui_labelVerticalAlign;
}

/* Positioning */
.ui.header + p {
  margin-top: $ui_nextParagraphDistance;
}



/*******************************
            Types
*******************************/


/*--------------
     Page
---------------*/

h1.ui.header {
  font-size: $ui_h1;
}
h2.ui.header {
  font-size: $ui_h2;
}
h3.ui.header {
  font-size: $ui_h3;
}
h4.ui.header {
  font-size: $ui_h4;
}
h5.ui.header {
  font-size: $ui_h5;
}


/* Sub Header */
h1.ui.header .sub.header {
  font-size: $ui_h1SubHeaderFontSize;
}
h2.ui.header .sub.header {
  font-size: $ui_h2SubHeaderFontSize;
}
h3.ui.header .sub.header {
  font-size: $ui_h3SubHeaderFontSize;
}
h4.ui.header .sub.header {
  font-size: $ui_h4SubHeaderFontSize;
}
h5.ui.header .sub.header {
  font-size: $ui_h5SubHeaderFontSize;
}


/*--------------
 Content Heading
---------------*/

.ui.huge.header {
  min-height: 1em;
  font-size: $ui_hugeFontSize;
}
.ui.large.header {
  font-size: $ui_largeFontSize;
}
.ui.medium.header {
  font-size: $ui_mediumFontSize;
}
.ui.small.header {
  font-size: $ui_smallFontSize;
}
.ui.tiny.header {
  font-size: $ui_tinyFontSize;
}

/* Sub Header */
.ui.huge.header .sub.header {
  font-size: $ui_hugeSubHeaderFontSize;
}
.ui.large.header .sub.header {
  font-size: $ui_hugeSubHeaderFontSize;
}
.ui.header .sub.header {
  font-size: $ui_subHeaderFontSize;
}
.ui.small.header .sub.header {
  font-size: $ui_smallSubHeaderFontSize;
}
.ui.tiny.header .sub.header {
  font-size: $ui_tinySubHeaderFontSize;
}

/*--------------
   Sub Heading
---------------*/

.ui.sub.header {
  padding: 0em;
  margin-bottom: $ui_subHeadingDistance;
  font-weight: $ui_subHeadingFontWeight;
  font-size: $ui_subHeadingFontSize;
  text-transform: $ui_subHeadingTextTransform;
  color: $ui_subHeadingColor;
}

.ui.small.sub.header {
  font-size: $ui_smallSubHeadingSize;
}
.ui.sub.header {
  font-size: $ui_subHeadingFontSize;
}
.ui.large.sub.header {
  font-size: $ui_largeSubHeadingSize;
}
.ui.huge.sub.header {
  font-size: $ui_hugeSubHeadingSize;
}



/*-------------------
        Icon
--------------------*/

.ui.icon.header {
  display: inline-block;
  text-align: center;
  margin: $ui_iconHeaderTopMargin 0em $ui_iconHeaderBottomMargin;
}
.ui.icon.header:after {
  content: '';
  display: block;
  height: 0px;
  clear: both;
  visibility: hidden;
}

.ui.icon.header:first-child {
  margin-top: $ui_iconHeaderFirstMargin;
}
.ui.icon.header .icon {
  float: none;
  display: block;
  width: auto;
  height: auto;
  line-height: 1;
  padding: 0em;
  font-size: $ui_iconHeaderSize;
  margin: 0em auto $ui_iconHeaderMargin;
  opacity: $ui_iconHeaderOpacity;
}
.ui.icon.header .content {
  display: block;
  padding: 0em;
}
.ui.icon.header .circular.icon {
  font-size: $ui_circularHeaderIconSize;
}
.ui.icon.header .square.icon {
  font-size: $ui_squareHeaderIconSize;
}
.ui.block.icon.header .icon {
  margin-bottom: 0em;
}
.ui.icon.header.aligned {
  margin-left: auto;
  margin-right: auto;
  display: block;
}

/*******************************
            States
*******************************/

.ui.disabled.header {
  opacity: $ui_disabledOpacity;
}


/*******************************
           Variations
*******************************/

/*-------------------
      Inverted
--------------------*/

.ui.inverted.header {
  color: $ui_invertedColor;
}
.ui.inverted.header .sub.header {
  color: $ui_invertedSubHeaderColor;
}
.ui.inverted.attached.header {
  background: $ui_invertedAttachedBackground;
  box-shadow: none;
  border-color: transparent;
}
.ui.inverted.block.header {
  background: $ui_invertedBlockBackground;
  box-shadow: none;
}
.ui.inverted.block.header {
  border-bottom: none;
}


