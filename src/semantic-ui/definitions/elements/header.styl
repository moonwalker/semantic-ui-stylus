}
.ui.centered.header,
.ui.center.aligned.header {
  text-align: center;
}
.ui.justified.header {
  text-align: justify;
}
.ui.justified.header:after {
  display: inline-block;
  content: '';
  width: 100%;
}

/*-------------------
       Floated
--------------------*/

.ui.floated.header,
.ui[class*="left floated"].header {
  float: left;
  margin-top: 0em;
  margin-right: $ui_floatedMargin;
}
.ui[class*="right floated"].header {
  float: right;
  margin-top: 0em;
  margin-left: $ui_floatedMargin;
}

/*-------------------
       Fitted
--------------------*/

.ui.fitted.header {
  padding: 0em;
}


/*-------------------
      Dividing
--------------------*/

.ui.dividing.header {
  padding-bottom: $ui_dividedBorderPadding;
  border-bottom: $ui_dividedBorder;
}
.ui.dividing.header .sub.header {
  padding-bottom: $ui_dividedSubHeaderPadding;
}
.ui.dividing.header .icon {
  margin-bottom: $ui_dividedIconPadding;
}

.ui.inverted.dividing.header {
  border-bottom-color: $ui_invertedDividedBorderColor;
}


/*-------------------
        Block
--------------------*/

