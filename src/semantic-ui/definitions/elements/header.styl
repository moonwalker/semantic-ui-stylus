  background: $ui_blockBackground;
  padding: $ui_blockVerticalPadding $ui_blockHorizontalPadding;
  box-shadow: $ui_blockBoxShadow;
  border: $ui_blockBorder;
  border-radius: $ui_blockBorderRadius;
}

.ui.tiny.block.header {
