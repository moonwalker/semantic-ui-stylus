/*******************************
            Theme
*******************************/

$ui_type    = 'element';
$ui_element = 'label';

@import '../../theme.config';

/*******************************
            Label
*******************************/

.ui.label {
  display: inline-block;
  line-height: 1;
  vertical-align: $ui_verticalAlign;

  margin: $ui_verticalMargin $ui_horizontalMargin;

  background-color: $ui_backgroundColor;
  background-image: $ui_backgroundImage;
  padding: $ui_verticalPadding $ui_horizontalPadding;
  color: $ui_color;

  text-transform: $ui_textTransform;
  font-weight: $ui_fontWeight;

  border: $ui_border;
  border-radius: $ui_borderRadius;
  transition: $ui_transition;
}

.ui.label:first-child {
  margin-left: 0em;
}
.ui.label:last-child {
  margin-right: 0em;
}

/* Link */
a.ui.label {
  cursor: pointer;
}

/* Inside Link */
.ui.label > a {
  cursor: pointer;
  color: inherit;
  opacity: $ui_linkOpacity;
  transition: $ui_linkTransition;
}
.ui.label > a:hover {
  opacity: 1;
}

/* Image */
.ui.label > img {
  width: auto !important;
  vertical-align: middle;
  height: $ui_imageHeight !important;
}

/* Icon */
.ui.label > .icon {
  width: auto;
  margin: 0em $ui_iconDistance 0em 0em;
}

/* Detail */
.ui.label > .detail {
  display: inline-block;
  vertical-align: top;
  font-weight: $ui_detailFontWeight;
  margin-left: $ui_detailMargin;
  opacity: $ui_detailOpacity;
}
.ui.label > .detail .icon {
  margin: 0em $ui_detailIconDistance 0em 0em;
}


/* Removable label */
.ui.label > .close.icon,
.ui.label > .delete.icon {
  cursor: pointer;
  margin-right: 0em;
  margin-left: $ui_deleteMargin;
  font-size: $ui_deleteSize;
  opacity: $ui_deleteOpacity;
  transition: $ui_deleteTransition;
}
.ui.label > .delete.icon:hover {
  opacity: 1;
}

/*-------------------
       Group
--------------------*/

.ui.labels > .label {
  margin: 0em $ui_groupHorizontalMargin $ui_groupVerticalMargin 0em;
}


/*-------------------
       Coupling
--------------------*/

.ui.header > .ui.label {
  margin-top: $ui_lineHeightOffset;
}


/* Remove border radius on attached segment */
.ui.attached.segment > .ui.top.left.attached.label,
.ui.bottom.attached.segment > .ui.top.left.attached.label  {
  border-top-left-radius: 0;
}
.ui.attached.segment > .ui.top.right.attached.label,
.ui.bottom.attached.segment > .ui.top.right.attached.label  {
  border-top-right-radius: 0;
}
.ui.top.attached.segment > .ui.bottom.left.attached.label  {
  border-bottom-left-radius: 0;
}
.ui.top.attached.segment > .ui.bottom.right.attached.label  {
  border-bottom-right-radius: 0;
}

/* Padding on next content after a label */
.ui.top.attached.label:first-child + :not(.attached),
.ui.top.attached.label + [class*="right floated"] + * {
  margin-top: $ui_attachedSegmentPadding !important;
}
.ui.bottom.attached.label:first-child ~ :last-child:not(.attached) {
  margin-top: 0em;
  margin-bottom: $ui_attachedSegmentPadding !important;
}


/*******************************
             Types
*******************************/

.ui.image.label {
  width: auto !important;
  margin-top: 0em;
  margin-bottom: 0em;
  max-width: 9999px;
  vertical-align: baseline;
  text-transform: none;

  background: $ui_imageLabelBackground;
  padding: $ui_imageLabelPadding;
  border-radius: $ui_imageLabelBorderRadius;
  box-shadow: $ui_imageLabelBoxShadow;
}

.ui.image.label img {
  display: inline-block;
  vertical-align: top;

  height: $ui_imageLabelImageHeight;
  margin: $ui_imageLabelImageMargin;
  border-radius: $ui_imageLabelImageBorderRadius;
}

.ui.image.label .detail {
  background: $ui_imageLabelDetailBackground;
  margin: $ui_imageLabelDetailMargin;
  padding: $ui_imageLabelDetailPadding;
  border-radius: 0em $ui_imageLabelBorderRadius $ui_imageLabelBorderRadius 0em;
}

/*-------------------
         Tag
--------------------*/

.ui.tag.labels .label,
.ui.tag.label {
  margin-left: 1em;
  position: relative;
  padding-left: $ui_tagHorizontalPadding;
  padding-right: $ui_tagHorizontalPadding;

  border-radius: 0em $ui_borderRadius $ui_borderRadius 0em;
  transition: $ui_tagTransition;
}
.ui.tag.labels .label:before,
.ui.tag.label:before {
    position: absolute;
    transform: translateY(-50%) translateX(50%) rotate(-45deg);

    top: $ui_tagTriangleTopOffset;
    right: $ui_tagTriangleRightOffset;
    content: '';

    background-color: inherit;
    background-image: $ui_tagTriangleBackgroundImage;

    width: $ui_tagTriangleSize;
    height: $ui_tagTriangleSize;
    transition: $ui_tagTransition;
}


.ui.tag.labels .label:after,
.ui.tag.label:after {
  position: absolute;
  content: '';
  top: 50%;
  left: -($ui_tagCircleSize / 2);

  margin-top: -($ui_tagCircleSize / 2);
  background-color: $ui_tagCircleColor !important;
  width: $ui_tagCircleSize;
  height: $ui_tagCircleSize;

  box-shadow: $ui_tagCircleBoxShadow;
  border-radius: $ui_circularRadius;
}


/*-------------------
    Corner Label
--------------------*/

.ui.corner.label {
  position: absolute;
  top: 0em;
  right: 0em;
  margin: 0em;
  padding: 0em;
  text-align: center;

  border-color: $ui_backgroundColor;

  width: $ui_cornerTriangleSize;
  height: $ui_cornerTriangleSize;
  z-index: $ui_cornerTriangleZIndex;
  transition: $ui_cornerTriangleTransition;
}

/* Icon Label */
.ui.corner.label{
  background-color: transparent !important;
}
.ui.corner.label:after {
  position: absolute;
  content: "";
  right: 0em;
  top: 0em;
  z-index: -1;

  width: 0em;
  height: 0em;
  background-color: transparent !important;

  border-top: 0em solid transparent;
  border-right: $ui_cornerTriangleSize solid transparent;
  border-bottom: $ui_cornerTriangleSize solid transparent;
  border-left: 0em solid transparent;

  border-right-color: inherit;
  transition: $ui_cornerTriangleTransition;
}

.ui.corner.label .icon {
  cursor: default;
  position: relative;
  top: $ui_cornerIconTopOffset;
  left: $ui_cornerIconLeftOffset;
  font-size: $ui_cornerIconSize;
  margin: 0em;
}

/* Left Corner */
.ui.left.corner.label,
.ui.left.corner.label:after {
  right: auto;
  left: 0em;
}
.ui.left.corner.label:after {
  border-top: $ui_cornerTriangleSize solid transparent;
  border-right: $ui_cornerTriangleSize solid transparent;
  border-bottom: 0em solid transparent;
  border-left: 0em solid transparent;

  border-top-color: inherit;
}
.ui.left.corner.label .icon {
  left: (- $ui_cornerIconLeftOffset);
}

/* Segment */
.ui.segment > .ui.corner.label {
  top: -1px;
  right: -1px;
}
.ui.segment > .ui.left.corner.label {
  right: auto;
  left: -1px;
}

/*-------------------
       Ribbon
--------------------*/

.ui.ribbon.label {
  position: relative;
  margin: 0em;
  min-width: max-content;
  border-radius: 0em $ui_borderRadius $ui_borderRadius 0em;
  border-color: $ui_ribbonShadowColor;
}

.ui.ribbon.label:after {
  position: absolute;
  content: '';

  top: 100%;
  left: 0%;
  background-color: transparent !important;

  border-style: solid;
  border-width: 0em $ui_ribbonTriangleSize $ui_ribbonTriangleSize 0em;
  border-color: transparent;
  border-right-color: inherit;

  width: 0em;
  height: 0em;
}
/* Positioning */
.ui.ribbon.label {
  left: $ui_ribbonOffset;
  margin-right: (- $ui_ribbonTriangleSize);
  padding-left: $ui_ribbonDistance;
  padding-right: $ui_ribbonTriangleSize;
}
.ui[class*="right ribbon"].label {
  left: $ui_rightRibbonOffset;
  padding-left: $ui_ribbonTriangleSize;
  padding-right: $ui_ribbonDistance;
}

/* Right Ribbon */
.ui[class*="right ribbon"].label {
  text-align: left;
  transform: translateX(-100%);
  border-radius: $ui_borderRadius 0em 0em $ui_borderRadius;
}
.ui[class*="right ribbon"].label:after {
  left: auto;
  right: 0%;

  border-style: solid;
  border-width: $ui_ribbonTriangleSize $ui_ribbonTriangleSize 0em 0em;
  border-color: transparent;
  border-top-color: inherit;
}

/* Inside Table */
.ui.image > .ribbon.label,
.ui.card .image > .ribbon.label {
  position: absolute;
  top: $ui_ribbonImageTopDistance;
}
.ui.card .image > .ui.ribbon.label,
.ui.image > .ui.ribbon.label {
  left: $ui_ribbonImageOffset;
}
.ui.card .image > .ui[class*="right ribbon"].label,
.ui.image > .ui[class*="right ribbon"].label {
  left: $ui_rightRibbonImageOffset;
  padding-left: $ui_horizontalPadding;
}

/* Inside Table */
.ui.table td > .ui.ribbon.label {
  left: $ui_ribbonTableOffset;
}
.ui.table td > .ui[class*="right ribbon"].label {
  left: $ui_rightRibbonTableOffset;
  padding-left: $ui_horizontalPadding;
}


/*-------------------
      Attached
--------------------*/

.ui[class*="top attached"].label,
.ui.attached.label {
  width: 100%;
  position: absolute;
  margin: 0em;
  top: 0em;
  left: 0em;

  padding: $ui_attachedVerticalPadding $ui_attachedHorizontalPadding;

  border-radius: $ui_attachedCornerBorderRadius $ui_attachedCornerBorderRadius 0em 0em;
}
.ui[class*="bottom attached"].label {
  top: auto;
  bottom: 0em;
  border-radius: 0em 0em $ui_attachedCornerBorderRadius $ui_attachedCornerBorderRadius;
}

.ui[class*="top left attached"].label {
  width: auto;
  margin-top: 0em !important;
  border-radius: $ui_attachedCornerBorderRadius 0em $ui_attachedBorderRadius 0em;
}

.ui[class*="top right attached"].label {
  width: auto;
  left: auto;
  right: 0em;
  border-radius: 0em $ui_attachedCornerBorderRadius 0em $ui_attachedBorderRadius;
}
.ui[class*="bottom left attached"].label {
  width: auto;
  top: auto;
  bottom: 0em;
  border-radius: 0em $ui_attachedBorderRadius 0em $ui_attachedCornerBorderRadius;
}
