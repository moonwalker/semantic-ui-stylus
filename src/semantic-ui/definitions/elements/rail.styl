/*******************************
            Theme
*******************************/

$ui_type    = 'element';
$ui_element = 'rail';

@import '../../theme.config';

/*******************************
             Rails
*******************************/

.ui.rail {
  position: absolute;
  top: 0%;
  width: $ui_width;
  height: $ui_height;
}

.ui.left.rail {
  left: auto;
  right: 100%;
  padding: 0em $ui_splitDistance 0em 0em;
  margin: 0em $ui_splitDistance 0em 0em;
}

.ui.right.rail {
  left: 100%;
  right: auto;
  padding: 0em 0em 0em $ui_splitDistance;
  margin: 0em 0em 0em $ui_splitDistance;
}

/*******************************
           Variations
*******************************/

/*--------------
     Internal
---------------*/

.ui.left.internal.rail {
  left: 0%;
  right: auto;
  padding: 0em 0em 0em $ui_splitDistance;
  margin: 0em 0em 0em $ui_splitDistance;
}

.ui.right.internal.rail {
  left: auto;
  right: 0%;
  padding: 0em $ui_splitDistance 0em 0em;
  margin: 0em $ui_splitDistance 0em 0em;
}


/*--------------
    Dividing
---------------*/

.ui.dividing.rail {
  width: $ui_dividingWidth;
}
.ui.left.dividing.rail {
  padding: 0em $ui_splitDividingDistance 0em 0em;
  margin: 0em $ui_splitDividingDistance 0em 0em;
  border-right: $ui_dividingBorder;
}
.ui.right.dividing.rail {
  border-left: $ui_dividingBorder;
  padding: 0em 0em 0em $ui_splitDividingDistance;
  margin: 0em 0em 0em $ui_splitDividingDistance;
}

/*--------------
    Distance
---------------*/

.ui.close.rail {
  width: $ui_closeWidth;
}
.ui.close.left.rail {
  padding: 0em $ui_splitCloseDistance 0em 0em;
  margin: 0em $ui_splitCloseDistance 0em 0em;
}
.ui.close.right.rail {
  padding: 0em 0em 0em $ui_splitCloseDistance;
  margin: 0em 0em 0em $ui_splitCloseDistance;
}

.ui.very.close.rail {
  width: $ui_veryCloseWidth;
}
.ui.very.close.left.rail {
  padding: 0em $ui_splitVeryCloseDistance 0em 0em;
  margin: 0em $ui_splitVeryCloseDistance 0em 0em;
}
.ui.very.close.right.rail {
  padding: 0em 0em 0em $ui_splitVeryCloseDistance;
  margin: 0em 0em 0em $ui_splitVeryCloseDistance;
}

/*--------------
    Attached
---------------*/

.ui.attached.left.rail,
.ui.attached.right.rail {
  padding: 0em;
  margin: 0em;
}

/*--------------
     Sizing
---------------*/

.ui.mini.rail {
  font-size: $ui_mini;
}
.ui.tiny.rail {
  font-size: $ui_tiny;
}
.ui.small.rail {
  font-size: $ui_small;
}
.ui.rail {
  font-size: $ui_medium;
}
.ui.large.rail {
  font-size: $ui_large;
}
.ui.big.rail {
  font-size: $ui_big;
}
.ui.huge.rail {
  font-size: $ui_huge;
}
.ui.massive.rail {
  font-size: $ui_massive;
}


loadUIOverrides();

