  top: 0px;
  bottom: 0px;
  border-radius: 0px;
  margin: 0em $ui_attachedHorizontalOffset;
  width: $ui_attachedWidth;
  max-width: $ui_attachedWidth;
  box-shadow: $ui_attachedBoxShadow;
  border: $ui_attachedBorder;
}
.ui.attached:not(.message) + .ui.attached.segment:not(.top) {
  border-top: none;
}

/* Top */
.ui[class*="top attached"].segment {
  bottom: 0px;
  margin-bottom: 0em;
  top: $ui_attachedTopOffset;
  margin-top: $ui_verticalMargin;
  border-radius: $ui_borderRadius $ui_borderRadius 0em 0em;
}
.ui.segment[class*="top attached"]:first-child {
  margin-top: 0em;
}

/* Bottom */
.ui.segment[class*="bottom attached"] {
  bottom: 0px;
  margin-top: 0em;
  top: $ui_attachedBottomOffset;
  margin-bottom: $ui_verticalMargin;
  box-shadow: $ui_attachedBottomBoxShadow;
  border-radius: 0em 0em $ui_borderRadius $ui_borderRadius;
