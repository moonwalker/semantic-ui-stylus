           Variations
*******************************/


/*-------------------
       Basic
--------------------*/

.ui.basic.segment {
  background: $ui_basicBackground;
  box-shadow: $ui_basicBoxShadow;
  border: $ui_basicBorder;
  border-radius: $ui_basicBorderRadius;
}

/*-------------------
       Clearing
--------------------*/

.ui.clearing.segment:after {
  content: ".";
  display: block;
  height: 0;
  clear: both;
  visibility: hidden;
}

