/*-------------------
       Aligned
--------------------*/

.ui[class*="left aligned"].segment {
  text-align: left;
}
.ui[class*="right aligned"].segment {
  text-align: right;
}
.ui[class*="center aligned"].segment {
  text-align: center;
}

/*-------------------
       Floated
--------------------*/

.ui.floated.segment,
.ui[class*="left floated"].segment {
  float: left;
  margin-right: $ui_floatedDistance;
}
.ui[class*="right floated"].segment {
  float: right;
  margin-left: $ui_floatedDistance;
}


/*-------------------
      Inverted
--------------------*/

.ui.inverted.segment {
  border: none;
  box-shadow: none;
}
.ui.inverted.segment,
.ui.primary.inverted.segment {
  background: $ui_invertedBackground;
  color: $ui_invertedTextColor;
}

/* Nested */
.ui.inverted.segment .segment {
  color: $ui_textColor;
}
.ui.inverted.segment .inverted.segment {
  color: $ui_invertedTextColor;
}

/* Attached */
.ui.inverted.attached.segment {
  border-color: $ui_solidWhiteBorderColor;
}

/*-------------------
     Emphasis
--------------------*/

/* Secondary */
.ui.secondary.segment {
  background: $ui_secondaryBackground;
  color: $ui_secondaryColor;
}
.ui.secondary.inverted.segment {
