/*******************************
            Theme
*******************************/

$ui_type    = 'module';
$ui_element = 'accordion';

@import '../../theme.config';

/*******************************
            Accordion
*******************************/

.ui.accordion,
.ui.accordion .accordion {
  max-width: 100%;
}
.ui.accordion .accordion {
  margin: $ui_childAccordionMargin;
  padding: $ui_childAccordionPadding;
}

/* Title */
.ui.accordion .title,
.ui.accordion .accordion .title {
  cursor: pointer;
}

/* Default Styling */
.ui.accordion .title:not(.ui) {
  padding: $ui_titlePadding;
  font-family: $ui_titleFont;
  font-size: $ui_titleFontSize;
  color: $ui_titleColor;
}

/* Content */
.ui.accordion .title ~ .content,
.ui.accordion .accordion .title ~ .content {
  display: none;
}

/* Default Styling */
.ui.accordion:not(.styled) .title ~ .content:not(.ui),
.ui.accordion:not(.styled) .accordion .title ~ .content:not(.ui) {
  margin: $ui_contentMargin;
  padding: $ui_contentPadding;
}
.ui.accordion:not(.styled) .title ~ .content:not(.ui):last-child {
  padding-bottom: 0em;
}

/* Arrow */
.ui.accordion .title .dropdown.icon,
.ui.accordion .accordion .title .dropdown.icon {
  display: $ui_iconDisplay;
  float: $ui_iconFloat;
  opacity: $ui_iconOpacity;
  width: $ui_iconWidth;
  height: $ui_iconHeight;
  margin: $ui_iconMargin;
  padding: $ui_iconPadding;
  font-size: $ui_iconFontSize;
  transition: $ui_iconTransition;
  vertical-align: $ui_iconVerticalAlign;
  transform: $ui_iconTransform;
}

/*--------------
    Coupling
---------------*/

/* Menu */
.ui.accordion.menu .item .title {
  display: block;
  padding: $ui_menuTitlePadding;
}
.ui.accordion.menu .item .title > .dropdown.icon {
  float: $ui_menuIconFloat;
  margin: $ui_menuIconMargin;
  transform: $ui_menuIconTransform;
}

/* Header */
.ui.accordion .ui.header .dropdown.icon {
  font-size: $ui_iconFontSize;
  margin: $ui_iconMargin;
}

/*******************************
            States
*******************************/

.ui.accordion .active.title .dropdown.icon,
.ui.accordion .accordion .active.title .dropdown.icon {
  transform: $ui_activeIconTransform;
}

.ui.accordion.menu .item .active.title > .dropdown.icon {
  transform: $ui_activeIconTransform;
}

/*******************************
            Types
*******************************/

/*--------------
     Styled
---------------*/

.ui.styled.accordion {
  width: $ui_styledWidth;
}

.ui.styled.accordion,
.ui.styled.accordion .accordion {
  border-radius: $ui_styledBorderRadius;
  background: $ui_styledBackground;
  box-shadow: $ui_styledBoxShadow;
}
.ui.styled.accordion .title,
.ui.styled.accordion .accordion .title {
  margin: $ui_styledTitleMargin;
  padding: $ui_styledTitlePadding;
  color: $ui_styledTitleColor;
  font-weight: $ui_styledTitleFontWeight;
  border-top: $ui_styledTitleBorder;
  transition: $ui_styledTitleTransition;
}
.ui.styled.accordion > .title:first-child,
.ui.styled.accordion .accordion .title:first-child {
  border-top: none;
}


/* Content */
.ui.styled.accordion .content,
.ui.styled.accordion .accordion .content {
  margin: $ui_styledContentMargin;
  padding: $ui_styledContentPadding;
}
.ui.styled.accordion .accordion .content {
  padding: $ui_styledChildContentMargin;
  padding: $ui_styledChildContentPadding;
}


/* Hover */
.ui.styled.accordion .title:hover,
.ui.styled.accordion .active.title,
.ui.styled.accordion .accordion .title:hover,
.ui.styled.accordion .accordion .active.title {
  background: $ui_styledTitleHoverBackground;
  color: $ui_styledTitleHoverColor;
}
.ui.styled.accordion .accordion .title:hover,
.ui.styled.accordion .accordion .active.title {
  background: $ui_styledHoverChildTitleBackground;
  color: $ui_styledHoverChildTitleColor;
}


/* Active */
.ui.styled.accordion .active.title {
  background: $ui_styledActiveTitleBackground;
  color: $ui_styledActiveTitleColor;
}
.ui.styled.accordion .accordion .active.title {
  background: $ui_styledActiveChildTitleBackground;
  color: $ui_styledActiveChildTitleColor;
}


/*******************************
            States
*******************************/

/*--------------
     Active
---------------*/

.ui.accordion .active.content,
.ui.accordion .accordion .active.content {
  display: block;
}

/*******************************
           Variations
*******************************/

/*--------------
     Fluid
---------------*/

.ui.fluid.accordion,
.ui.fluid.accordion .accordion {
  width: 100%;
}

/*--------------
     Inverted
---------------*/

.ui.inverted.accordion .title:not(.ui) {
  color: $ui_invertedTitleColor;
}

loadUIOverrides();


