/*******************************
            Theme
*******************************/

$ui_type    = 'module';
$ui_element = 'dimmer';

@import '../../theme.config';

/*******************************
            Dimmer
*******************************/

.dimmable:not(body) {
  position: $ui_dimmablePosition;
}

.ui.dimmer {
  display: none;
  position: $ui_dimmerPosition;
  top: 0em !important;
  left: 0em !important;

  width: 100%;
  height: 100%;

  text-align: $ui_textAlign;
  vertical-align: $ui_verticalAlign;
  padding: $ui_padding;

  background-color: $ui_backgroundColor;
  opacity: $ui_hiddenOpacity;
  line-height: $ui_lineHeight;

  animation-fill-mode: both;
  animation-duration: $ui_duration;
  transition: $ui_transition;

  flex-direction: column;
  align-items: center;
  justify-content: center;

  user-select: none;
  will-change: opacity;
  z-index: $ui_zIndex;
}

/* Dimmer Content */
.ui.dimmer > .content {
  user-select: text;
  color: $ui_textColor;
}


/* Loose Coupling */
.ui.segment > .ui.dimmer {
  border-radius: inherit !important;
}

/* Scrollbars */
addScrollbars() {
  return unless $ui_useCustomScrollbars;
  .ui.dimmer:not(.inverted)::-webkit-scrollbar-track {
    background: $ui_trackInvertedBackground;
  }
  .ui.dimmer:not(.inverted)::-webkit-scrollbar-thumb {
    background: $ui_thumbInvertedBackground;
  }
  .ui.dimmer:not(.inverted)::-webkit-scrollbar-thumb:window-inactive {
    background: $ui_thumbInvertedInactiveBackground;
  }
  .ui.dimmer:not(.inverted)::-webkit-scrollbar-thumb:hover {
    background: $ui_thumbInvertedHoverBackground;
  }
}
addScrollbars();

/*******************************
            States
*******************************/

/* Animating */
.animating.dimmable:not(body),
.dimmed.dimmable:not(body) {
  overflow: $ui_overflow;
}

/* Animating / Active / Visible */
.dimmed.dimmable > .ui.animating.dimmer,
.dimmed.dimmable > .ui.visible.dimmer,
.ui.active.dimmer {
  display: flex;
  opacity: $ui_visibleOpacity;
}

/* Disabled */
.ui.disabled.dimmer {
  width: 0 !important;
  height: 0 !important;
}


/*******************************
           Variations
*******************************/

/*--------------
    Alignment
---------------*/

.ui[class*="top aligned"].dimmer {
  justify-content: flex-start;
}
.ui[class*="bottom aligned"].dimmer {
  justify-content: flex-end;
}

/*--------------
      Page
---------------*/

.ui.page.dimmer {
  position: $ui_pageDimmerPosition;
  transform-style: $ui_transformStyle;
  perspective: $ui_perspective;
  transform-origin: center center;
}

body.animating.in.dimmable,
body.dimmed.dimmable {
  overflow: hidden;
}

body.dimmable > .dimmer {
  position: fixed;
}

/*--------------
    Blurring
---------------*/

.blurring.dimmable > :not(.dimmer) {
  filter: $ui_blurredStartFilter;
  transition: $ui_blurredTransition;
}
.blurring.dimmed.dimmable > :not(.dimmer) {
  filter: $ui_blurredEndFilter;
}

/* Dimmer Color */
.blurring.dimmable > .dimmer {
  background-color: $ui_blurredBackgroundColor;
}
.blurring.dimmable > .inverted.dimmer {
  background-color: $ui_blurredInvertedBackgroundColor;
}

/*--------------
    Aligned
---------------*/

.ui.dimmer > .top.aligned.content > * {
  vertical-align: top;
}
.ui.dimmer > .bottom.aligned.content > * {
  vertical-align: bottom;
}

/*--------------
    Inverted
---------------*/

.ui.inverted.dimmer {
  background-color: $ui_invertedBackgroundColor;
}
.ui.inverted.dimmer > .content > * {
  color: $ui_invertedTextColor;
}

/*--------------
     Simple
---------------*/

/* Displays without javascript */
.ui.simple.dimmer {
  display: block;
  overflow: hidden;
  opacity: 1;
  width: 0%;
  height: 0%;
  z-index: -100;
  background-color: $ui_simpleStartBackgroundColor;
}
.dimmed.dimmable > .ui.simple.dimmer {
  overflow: visible;
  opacity: 1;
  width: 100%;
  height: 100%;
  background-color: $ui_simpleEndBackgroundColor;
  z-index: $ui_simpleZIndex;
}

.ui.simple.inverted.dimmer {
  background-color: $ui_simpleInvertedStartBackgroundColor;
}
.dimmed.dimmable > .ui.simple.inverted.dimmer {
  background-color: $ui_simpleInvertedEndBackgroundColor;
}

loadUIOverrides();

