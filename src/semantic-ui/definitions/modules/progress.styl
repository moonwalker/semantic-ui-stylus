/*******************************
            Theme
*******************************/

$ui_type    = 'module';
$ui_element = 'progress';

@import '../../theme.config';

/*******************************
            Progress
*******************************/

.ui.progress {
  position: relative;
  display: block;
  max-width: 100%;
  border: $ui_border;
  margin: $ui_margin;
  box-shadow: $ui_boxShadow;
  background: $ui_background;
  padding: $ui_padding;
  border-radius: $ui_borderRadius;
}

.ui.progress:first-child {
  margin: $ui_firstMargin;
}
.ui.progress:last-child {
  margin: $ui_lastMargin;
}

/*******************************
            Content
*******************************/

/* Activity Bar */
.ui.progress .bar {
  display: block;
  line-height: 1;
  position: $ui_barPosition;
  width: $ui_barInitialWidth;
  min-width: $ui_barMinWidth;
  background: $ui_barBackground;
  border-radius: $ui_barBorderRadius;
  transition: $ui_barTransition;
}

/* Percent Complete */
.ui.progress .bar > .progress {
  white-space: nowrap;
  position: $ui_progressPosition;
  width: $ui_progressWidth;
  font-size: $ui_progressSize;
  top: $ui_progressTop;
  right: $ui_progressRight;
  left: $ui_progressLeft;
  bottom: $ui_progressBottom;
  color: $ui_progressColor;
  text-shadow: $ui_progressTextShadow;
  margin-top: $ui_progressOffset;
  font-weight: $ui_progressFontWeight;
  text-align: $ui_progressTextAlign;
}

/* Label */
.ui.progress > .label {
  position: absolute;
  width: $ui_labelWidth;
  font-size: $ui_labelSize;
  top: $ui_labelTop;
  right: $ui_labelRight;
  left: $ui_labelLeft;
  bottom: $ui_labelBottom;
  color: $ui_labelColor;
  font-weight: $ui_labelFontWeight;
  text-shadow: $ui_labelTextShadow;
  margin-top: $ui_labelOffset;
  text-align: $ui_labelTextAlign;
  transition: $ui_labelTransition;
}


/*******************************
            Types
*******************************/


/* Indicating */
.ui.indicating.progress[data-percent^="1"] .bar,
.ui.indicating.progress[data-percent^="2"] .bar {
  background-color: $ui_indicatingFirstColor;
}
.ui.indicating.progress[data-percent^="3"] .bar {
  background-color: $ui_indicatingSecondColor;
}
.ui.indicating.progress[data-percent^="4"] .bar,
.ui.indicating.progress[data-percent^="5"] .bar {
  background-color: $ui_indicatingThirdColor;
}
.ui.indicating.progress[data-percent^="6"] .bar {
  background-color: $ui_indicatingFourthColor;
}
.ui.indicating.progress[data-percent^="7"] .bar,
.ui.indicating.progress[data-percent^="8"] .bar {
  background-color: $ui_indicatingFifthColor;
}
.ui.indicating.progress[data-percent^="9"] .bar,
.ui.indicating.progress[data-percent^="100"] .bar {
  background-color: $ui_indicatingSixthColor;
}

/* Indicating Label */
.ui.indicating.progress[data-percent^="1"] .label,
.ui.indicating.progress[data-percent^="2"] .label {
  color: $ui_indicatingFirstLabelColor;
}
.ui.indicating.progress[data-percent^="3"] .label {
  color: $ui_indicatingSecondLabelColor;
}
.ui.indicating.progress[data-percent^="4"] .label,
.ui.indicating.progress[data-percent^="5"] .label {
  color: $ui_indicatingThirdLabelColor;
}
.ui.indicating.progress[data-percent^="6"] .label {
  color: $ui_indicatingFourthLabelColor;
}
.ui.indicating.progress[data-percent^="7"] .label,
.ui.indicating.progress[data-percent^="8"] .label {
  color: $ui_indicatingFifthLabelColor;
}
.ui.indicating.progress[data-percent^="9"] .label,
.ui.indicating.progress[data-percent^="100"] .label {
  color: $ui_indicatingSixthLabelColor;
}

/* Single Digits */
.ui.indicating.progress[data-percent="1"] .bar,
.ui.indicating.progress[data-percent="2"] .bar,
.ui.indicating.progress[data-percent="3"] .bar,
.ui.indicating.progress[data-percent="4"] .bar,
.ui.indicating.progress[data-percent="5"] .bar,
.ui.indicating.progress[data-percent="6"] .bar,
.ui.indicating.progress[data-percent="7"] .bar,
.ui.indicating.progress[data-percent="8"] .bar,
.ui.indicating.progress[data-percent="9"] .bar {
  background-color: $ui_indicatingFirstColor;
}
.ui.indicating.progress[data-percent="1"] .label,
.ui.indicating.progress[data-percent="2"] .label,
.ui.indicating.progress[data-percent="3"] .label,
.ui.indicating.progress[data-percent="4"] .label,
.ui.indicating.progress[data-percent="5"] .label,
.ui.indicating.progress[data-percent="6"] .label,
.ui.indicating.progress[data-percent="7"] .label,
.ui.indicating.progress[data-percent="8"] .label,
.ui.indicating.progress[data-percent="9"] .label {
  color: $ui_indicatingFirstLabelColor;
}

/* Indicating Success */
.ui.indicating.progress.success .label {
  color: $ui_successHeaderColor;
}

/*******************************
             States
*******************************/


/*--------------
     Success
---------------*/

.ui.progress.success .bar {
  background-color: $ui_successColor !important;
}
.ui.progress.success .bar,
.ui.progress.success .bar::after {
  animation: none !important;
}
.ui.progress.success > .label {
  color: $ui_successHeaderColor;
}

/*--------------
     Warning
---------------*/

.ui.progress.warning .bar {
  background-color: $ui_warningColor !important;
}
.ui.progress.warning .bar,
.ui.progress.warning .bar::after {
  animation: none !important;
}
.ui.progress.warning > .label {
  color: $ui_warningHeaderColor;
}

/*--------------
     Error
---------------*/

.ui.progress.error .bar {
  background-color: $ui_errorColor !important;
}
.ui.progress.error .bar,
.ui.progress.error .bar::after {
  animation: none !important;
}
.ui.progress.error > .label {
  color: $ui_errorHeaderColor;
}

/*--------------
     Active
---------------*/

.ui.active.progress .bar {
  position: relative;
  min-width: $ui_activeMinWidth;
}
.ui.active.progress .bar::after {
  content: '';
  opacity: 0;

  position: absolute;
  top: 0px;
  left: 0px;
  right: 0px;
  bottom: 0px;
  background: $ui_activePulseColor;

  border-radius: $ui_barBorderRadius;

  animation: progress-active $ui_activePulseDuration $ui_defaultEasing infinite;
}
@keyframes progress-active {
  0% {
    opacity: $ui_activePulseMaxOpacity;
    width: 0;
  }
  90% {
  }
  100% {
    opacity: 0;
    width: 100%;
  }
}

/*--------------
    Disabled
---------------*/

.ui.disabled.progress {
  opacity: 0.35;
}
.ui.disabled.progress .bar,
.ui.disabled.progress .bar::after {
  animation: none !important;
}


/*******************************
           Variations
*******************************/


/*--------------
    Inverted
---------------*/

.ui.inverted.progress {
  background: $ui_invertedBackground;
  border: $ui_invertedBorder;
}
.ui.inverted.progress .bar {
  background: $ui_invertedBarBackground;
}
.ui.inverted.progress .bar > .progress {
  color: $ui_invertedProgressColor;
}
.ui.inverted.progress > .label {
  color: $ui_invertedLabelColor;
}
.ui.inverted.progress.success > .label {
  color: $ui_successColor;
}
.ui.inverted.progress.warning > .label {
  color: $ui_warningColor;
}
.ui.inverted.progress.error > .label {
  color: $ui_errorColor;
}

/*--------------
    Attached
---------------*/

/* bottom attached */
.ui.progress.attached {
  background: $ui_attachedBackground;
  position: relative;
  border: none;
  margin: 0em;
}
.ui.progress.attached,
.ui.progress.attached .bar {
  display: block;
  height: $ui_attachedHeight;
  padding: 0px;
  overflow: hidden;
  border-radius: 0em 0em $ui_attachedBorderRadius $ui_attachedBorderRadius;
}
.ui.progress.attached .bar {
  border-radius: 0em;
}

/* top attached */
.ui.progress.top.attached,
.ui.progress.top.attached .bar {
  top: 0px;
  border-radius: $ui_attachedBorderRadius $ui_attachedBorderRadius 0em 0em;
}
.ui.progress.top.attached .bar {
  border-radius: 0em;
}

/* Coupling */
.ui.segment > .ui.attached.progress,
.ui.card > .ui.attached.progress {
  position: absolute;
  top: auto;
  left: 0;
  bottom: 100%;
  width: 100%;
}
.ui.segment > .ui.bottom.attached.progress,
.ui.card > .ui.bottom.attached.progress {
  top: 100%;
  bottom: auto;
}

