/*******************************
            Theme
*******************************/

$ui_type    = 'module';
$ui_element = 'shape';

@import '../../theme.config';

/*******************************
              Shape
*******************************/

.ui.shape {
  position: relative;
  vertical-align: top;
  display: $ui_display;
  perspective: $ui_perspective;
  transition: $ui_transition;
}

.ui.shape .sides {
  transform-style: preserve-3d;
}

.ui.shape .side {
  opacity: 1;
  width: 100%;

  margin: $ui_sideMargin !important;
  backface-visibility: $ui_backfaceVisibility;
}

.ui.shape .side {
  display: none;
}

.ui.shape .side * {
  backface-visibility: visible !important;
}

/*******************************
             Types
*******************************/

.ui.cube.shape .side {
  min-width: $ui_cubeSize;
  height: $ui_cubeSize;

  padding: $ui_cubePadding;

  background-color: $ui_cubeBackground;
  color: $ui_cubeTextColor;
  box-shadow: $ui_cubeBoxShadow;
}
.ui.cube.shape .side > .content {
  width: 100%;
  height: 100%;
  display: table;

  text-align: $ui_cubeTextAlign;
  user-select: text;
}
.ui.cube.shape .side > .content > div {
  display: table-cell;
  vertical-align: middle;
  font-size: $ui_cubeFontSize;
}

/*******************************
          Variations
*******************************/

.ui.text.shape.animating .sides {
  position: static;
}
.ui.text.shape .side {
  white-space: nowrap;
}
.ui.text.shape .side > * {
  white-space: normal;
}


/*******************************
             States
*******************************/

/*--------------
    Loading
---------------*/

.ui.loading.shape {
  position: absolute;
  top: -9999px;
  left: -9999px;
}


/*--------------
    Animating
---------------*/

.ui.shape .animating.side {
  position: absolute;
  top: 0px;
  left: 0px;
  display: block;
  z-index: $ui_animatingZIndex;
}
.ui.shape .hidden.side {
  opacity: $ui_hiddenSideOpacity;
}


/*--------------
      CSS
---------------*/

.ui.shape.animating .sides {
  position: absolute;
}
.ui.shape.animating .sides {
  transition: $ui_transition;
}
.ui.shape.animating .side {
  transition: $ui_sideTransition;
}

/*--------------
     Active
---------------*/

.ui.shape .active.side {
  display: block;
}

loadUIOverrides();

