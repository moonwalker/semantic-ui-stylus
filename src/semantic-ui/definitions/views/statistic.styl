/*******************************
            Theme
*******************************/

$ui_type    = 'view';
$ui_element = 'statistic';

@import '../../theme.config';

/*******************************
           Statistic
*******************************/

/* Standalone */
.ui.statistic {
  display: inline-flex;
  flex-direction: column;
  margin: $ui_margin;
  max-width: $ui_maxWidth;
}

.ui.statistic + .ui.statistic {
  margin: 0em 0em 0em $ui_horizontalSpacing;
}

.ui.statistic:first-child {
  margin-top: 0em;
}
.ui.statistic:last-child {
  margin-bottom: 0em;
}



/*******************************
            Group
*******************************/

/* Grouped */
.ui.statistics {
  display: flex;
  align-items: flex-start;
  flex-wrap: wrap;
}
.ui.statistics > .statistic {
  display: inline-flex;
  flex: 0 1 auto;
  flex-direction: column;
  margin: $ui_elementMargin;
  max-width: $ui_elementMaxWidth;
}
.ui.statistics {
  display: flex;
  margin: $ui_groupMargin;
}

/* Clearing */
.ui.statistics:after {
  display: block;
  content: ' ';
  height: 0px;
  clear: both;
  overflow: hidden;
  visibility: hidden;
}

.ui.statistics:first-child {
  margin-top: 0em;
}
.ui.statistics:last-child {
  margin-bottom: 0em;
}


/*******************************
            Content
*******************************/


/*--------------
      Value
---------------*/

.ui.statistics .statistic > .value,
.ui.statistic > .value {
  font-family: $ui_valueFont;
  font-size: $ui_valueSize;
  font-weight: $ui_valueFontWeight;
  line-height: $ui_valueLineHeight;
  color: $ui_valueColor;
  text-transform: $ui_valueTextTransform;
  text-align: $ui_textAlign;
}

/*--------------
     Label
---------------*/

.ui.statistics .statistic > .label,
.ui.statistic > .label {
  font-family: $ui_labelFont;
  font-size: $ui_labelSize;
  font-weight: $ui_labelFontWeight;
  color: $ui_labelColor;
  text-transform: $ui_labelTextTransform;
  text-align: $ui_textAlign;
}

/* Top Label */
.ui.statistics .statistic > .label ~ .value,
.ui.statistic > .label ~ .value {
  margin-top: $ui_topLabelDistance;
}

/* Bottom Label */
.ui.statistics .statistic > .value ~ .label,
.ui.statistic > .value ~ .label {
  margin-top: $ui_bottomLabelDistance;
}



/*******************************
             Types
*******************************/

/*--------------
   Icon Value
---------------*/

.ui.statistics .statistic > .value .icon,
.ui.statistic > .value .icon {
  opacity: 1;
  width: auto;
  margin: 0em;
}

/*--------------
   Text Value
---------------*/

.ui.statistics .statistic > .text.value,
.ui.statistic > .text.value {
  line-height: $ui_textValueLineHeight;
  min-height: $ui_textValueMinHeight;
  font-weight: $ui_textValueFontWeight;
  text-align: center;
}
.ui.statistics .statistic > .text.value + .label,
.ui.statistic > .text.value + .label {
  text-align: center;
}

/*--------------
   Image Value
---------------*/

.ui.statistics .statistic > .value img,
.ui.statistic > .value img {
