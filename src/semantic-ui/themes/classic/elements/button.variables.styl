/*******************************
            Button
*******************************/

/*-------------------
       Element
--------------------*/

/* Shadow */
$ui_shadowDistance= 0em;
$ui_shadowOffset= ($ui_shadowDistance / 2);
$ui_shadowBoxShadow= 0px (- $ui_shadowDistance) 0px 0px $ui_borderColor inset;
$ui_backgroundColor= #FAFAFA;
$ui_backgroundImage= linear-gradient(rgba(0, 0, 0, 0), rgba(0, 0, 0, 0.09));
$ui_boxShadow=0px 0px 0px 1px $ui_borderColor inset,
  $ui_shadowBoxShadow;

/* Padding */
$ui_verticalPadding= 0.8em;
$ui_horizontalPadding= 1.5em;


/*-------------------
        Group
--------------------*/

$ui_groupBoxShadow= none;
$ui_groupButtonBoxShadow=0px 0px 0px 1px $ui_borderColor inset,
  $ui_shadowBoxShadow;
$ui_verticalBoxShadow= 0px 0px 0px 1px $ui_borderColor inset;
$ui_groupButtonOffset= 0px 0px 0px -1px;
$ui_verticalGroupOffset= 0px 0px -1px 0px;

/*-------------------
        States
--------------------*/

/* Hovered */
$ui_hoverBackgroundColor= '';
$ui_hoverBackgroundImage= linear-gradient(rgba(0, 0, 0, 0), rgba(0, 0, 0, 0.13));
$ui_hoverBoxShadow= '';
$ui_hoverColor= $ui_hoveredTextColor;
$ui_iconHoverOpacity= 0.85;

/* Focused */
$ui_focusBackgroundColor= '';
$ui_focusBackgroundImage= '';
$ui_focusBoxShadow=0px 0px 1px rgba(81, 167, 232, 0.8) inset,
  0px 0px 3px 2px rgba(81, 167, 232, 0.8);
$ui_focusColor= $ui_hoveredTextColor;
$ui_iconFocusOpacity= 0.85;

/* Pressed Down */
$ui_downBackgroundColor= #F1F1F1;
$ui_downBackgroundImage= '';
$ui_downBoxShadow=0px 0px 0px 1px rgba(0, 0, 0, 0.1) inset,
  0px 1px 4px 0px rgba(0, 0, 0, 0.1) inset !important;
$ui_downColor= $ui_pressedTextColor;

/* Active */
$ui_activeBackgroundColor= #DADADA;
$ui_activeBackgroundImage= none;
$ui_activeColor= $ui_selectedTextColor;
$ui_activeBoxShadow=0px 0px 0px 1px rgba(0, 0, 0, 0.1) inset,
  0px 1px 4px 0px rgba(0, 0, 0, 0.1) inset !important;

/* Active + Hovered */
$ui_activeHoverBackgroundColor= #DADADA;
$ui_activeHoverBackgroundImage= none;
$ui_activeHoverBoxShadow=0px 0px 0px 1px rgba(0, 0, 0, 0.1) inset,
  0px 1px 4px 0px rgba(0, 0, 0, 0.1) inset !important;
$ui_activeHoverColor= $ui_selectedTextColor;

/* Loading */
$ui_loadingBackgroundColor= #FFFFFF;

/*-------------------
        Types
--------------------*/

/* Labeled Icon */
$ui_labeledIconBackgroundColor= rgba(0, 0, 0, 0.05);
$ui_labeledIconLeftShadow= -1px 0px 0px 0px $ui_labeledIconBorder inset;
$ui_labeledIconRightShadow= 1px 0px 0px 0px $ui_labeledIconBorder inset;

