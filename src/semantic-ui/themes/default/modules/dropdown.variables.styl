/*******************************
            Dropdown
*******************************/

/*-------------------
       Element
--------------------*/

$ui_transition=box-shadow $ui_defaultDuration $ui_defaultEasing,
  width $ui_defaultDuration $ui_defaultEasing;
$ui_borderRadius= $ui_defaultBorderRadius;

$ui_raisedShadow= 0px 2px 3px 0px $ui_borderColor;

/*-------------------
       Content
--------------------*/

/* Icon */
$ui_dropdownIconSize= $ui_relative12px;
$ui_dropdownIconMargin= 0em 0em 0em 1em;

/* Current Text */
$ui_textTransition= none;

/* Menu */
$ui_menuBackground= #FFFFFF;
$ui_menuMargin= 0em;
$ui_menuPadding= 0em 0em;
$ui_menuTop= 100%;
$ui_menuTextAlign= left;

$ui_menuBorderWidth= 1px;
$ui_menuBorderColor= $ui_borderColor;
$ui_menuBorder= $ui_menuBorderWidth solid $ui_menuBorderColor;
$ui_menuBoxShadow= $ui_raisedShadow;
$ui_menuBorderRadius= $ui_borderRadius;
$ui_menuTransition= opacity $ui_defaultDuration $ui_defaultEasing;
$ui_menuMinWidth= unquote("calc(100% + (" + $ui_menuBorderWidth + " * 2))");
$ui_menuZIndex= 11;

/* Text */
$ui_textLineHeight= 1em;
$ui_textLineHeightOffset= ($ui_textLineHeight - 1em);
$ui_textCursorSpacing= 1px;

/* Menu Item */
$ui_itemFontSize= $ui_medium;
$ui_itemTextAlign= left;
$ui_itemBorder= none;
$ui_itemHeight= auto;
$ui_itemDivider= none;
$ui_itemColor= $ui_textColor;
$ui_itemVerticalPadding= $ui_mini;
$ui_itemHorizontalPadding= $ui_large;
$ui_itemPadding= $ui_itemVerticalPadding $ui_itemHorizontalPadding;
$ui_itemFontWeight= normal;
$ui_itemLineHeight= 1em;
$ui_itemLineHeightOffset= ($ui_itemLineHeight - 1em);
$ui_itemTextTransform= none;
$ui_itemBoxShadow= none;

/* Sub Menu */
$ui_subMenuTop= 0%;
$ui_subMenuLeft= 100%;
$ui_subMenuRight= auto;
$ui_subMenuDistanceAway= -0.5em;
$ui_subMenuMargin= 0em 0em 0em $ui_subMenuDistanceAway;
$ui_subMenuBorderRadius= $ui_borderRadius;
$ui_subMenuZIndex= 21;

/* Menu Header */
$ui_menuHeaderColor= $ui_darkTextColor;
$ui_menuHeaderFontSize= $ui_relative11px;
$ui_menuHeaderFontWeight= bold;
$ui_menuHeaderTextTransform= uppercase;
$ui_menuHeaderMargin= 1rem 0rem 0.75rem;
$ui_menuHeaderPadding= 0em $ui_itemHorizontalPadding;

/* Menu Divider */
$ui_menuDividerMargin= 0.5em 0em;
$ui_menuDividerColor= $ui_internalBorderColor;
$ui_menuDividerSize= 1px;
$ui_menuDividerBorder= $ui_menuDividerSize solid $ui_menuDividerColor;

/* Menu Input */
$ui_menuInputMargin= $ui_large $ui_mini;
$ui_menuInputMinWidth= 10rem;
$ui_menuInputVerticalPadding= 0.5em;
$ui_menuInputHorizontalPadding= $ui_inputHorizontalPadding;
$ui_menuInputPadding= $ui_menuInputVerticalPadding $ui_menuInputHorizontalPadding;

/* Menu Image */
$ui_menuImageMaxHeight= 2em;

/* Item Sub-Element */
$ui_itemElementFloat= none;
$ui_itemElementDistance= $ui_mini;

/* Sub-Menu Dropdown Icon */
$ui_itemDropdownIconDistance= 1em;
$ui_itemDropdownIconFloat= right;
$ui_itemDropdownIconMargin= $ui_itemLineHeightOffset 0em 0em $ui_itemDropdownIconDistance;

/* Description */
$ui_itemDescriptionFloat= right;
$ui_itemDescriptionMargin= 0em 0em 0em 1em;
$ui_itemDescriptionColor= $ui_lightTextColor;

/* Message */
$ui_messagePadding= $ui_selectionItemPadding;
$ui_messageFontWeight= normal;
$ui_messageColor= $ui_unselectedTextColor;

/* Floated Content */
$ui_floatedDistance= 1em;

/*-------------------
        Types
--------------------*/

/*------------
   Selection
--------------*/

$ui_selectionMinWidth= 14em;
$ui_selectionVerticalPadding= $ui_inputVerticalPadding;
$ui_selectionHorizontalPadding= $ui_inputHorizontalPadding;
$ui_selectionBorderEmWidth=  $ui_relative1px;
$ui_selectionMinHeight= $ui_inputLineHeight + ($ui_selectionVerticalPadding * 2) - $ui_selectionBorderEmWidth;
$ui_selectionBackground= $ui_inputBackground;
$ui_selectionDisplay= inline-block;
$ui_selectionIconDistance= $ui_inputHorizontalPadding + $ui_glyphWidth;
$ui_selectionPadding= $ui_selectionVerticalPadding $ui_selectionIconDistance $ui_selectionVerticalPadding $ui_selectionHorizontalPadding;
$ui_selectionZIndex= 10;

$ui_selectionItemDivider= 1px solid $ui_solidInternalBorderColor;
$ui_selectionMessagePadding= $ui_selectionItemPadding;

/* <select> */
$ui_selectBorder= 1px solid $ui_borderColor;
$ui_selectPadding= 0.5em;
$ui_selectVisibility= visible;
$ui_selectHeight= 38px;

$ui_selectionTextColor= $ui_textColor;

$ui_selectionTextUnderlayIconOpacity= $ui_disabledOpacity;
$ui_selectionTextUnderlayColor= $ui_inputPlaceholderFocusColor;

$ui_selectionBoxShadow= none;
$ui_selectionBorderColor= $ui_borderColor;
$ui_selectionBorder= 1px solid $ui_selectionBorderColor;
$ui_selectionBorderRadius= $ui_borderRadius;

$ui_selectionIconOpacity= 0.8;
$ui_selectionIconZIndex= 3;
$ui_selectionIconHitbox= $ui_selectionVerticalPadding;
$ui_selectionIconMargin= (- $ui_selectionIconHitbox);
$ui_selectionIconPadding= $ui_selectionIconHitbox;
$ui_selectionIconTransition= opacity $ui_defaultDuration $ui_defaultEasing;

$ui_selectionMenuBorderRadius= 0em 0em $ui_borderRadius $ui_borderRadius;
$ui_selectionMenuBoxShadow= $ui_raisedShadow;
$ui_selectionMenuItemBoxShadow= none;

$ui_selectionItemHorizontalPadding= $ui_itemHorizontalPadding;
$ui_selectionItemVerticalPadding= $ui_itemVerticalPadding;
$ui_selectionItemPadding= $ui_selectionItemVerticalPadding $ui_selectionItemHorizontalPadding;

$ui_selectionTransition= $ui_transition;
$ui_selectionMenuTransition= $ui_menuTransition;

/* Responsive */
$ui_selectionMobileMaxItems= 3;
$ui_selectionTabletMaxItems= 4;
$ui_selectionComputerMaxItems= 6;
$ui_selectionWidescreenMaxItems= 8;

/* Derived */
$ui_selectedBorderEMWidth= 0.1em; /* 1px / em size */
$ui_selectionItemHeight= ($ui_selectionItemVerticalPadding * 2) + $ui_itemLineHeight + $ui_selectedBorderEMWidth;
$ui_selectionMobileMaxMenuHeight= ($ui_selectionItemHeight * $ui_selectionMobileMaxItems);
$ui_selectionTabletMaxMenuHeight= ($ui_selectionItemHeight * $ui_selectionTabletMaxItems);
$ui_selectionComputerMaxMenuHeight= ($ui_selectionItemHeight * $ui_selectionComputerMaxItems);
$ui_selectionWidescreenMaxMenuHeight= ($ui_selectionItemHeight * $ui_selectionWidescreenMaxItems);

/* Hover */
$ui_selectionHoverBorderColor= $ui_selectedBorderColor;
$ui_selectionHoverBoxShadow= none;

/* Focus */
$ui_selectionFocusBorderColor= $ui_focusedFormMutedBorderColor;
$ui_selectionFocusBoxShadow= none;
$ui_selectionFocusMenuBoxShadow= $ui_raisedShadow;

/* Visible */
$ui_selectionVisibleTextFontWeight= normal;
$ui_selectionVisibleTextColor= $ui_hoveredTextColor;

$ui_selectionVisibleBorderColor= $ui_focusedFormMutedBorderColor;
$ui_selectionVisibleBoxShadow= $ui_raisedShadow;
$ui_selectionVisibleMenuBoxShadow= $ui_raisedShadow;

/* Visible Hover */
$ui_selectionActiveHoverBorderColor= $ui_focusedFormMutedBorderColor;
$ui_selectionActiveHoverBoxShadow= $ui_selectionVisibleBoxShadow;
$ui_selectionActiveHoverMenuBoxShadow= $ui_selectionVisibleMenuBoxShadow;

$ui_selectionVisibleConnectingBorder= 0em;
$ui_selectionVisibleIconOpacity= 1;

/*--------------
     Search
--------------*/

$ui_searchMinWidth= '';

/* Search Selection */
$ui_searchSelectionLineHeight= $ui_inputLineHeight;
$ui_searchSelectionLineHeightOffset= (($ui_searchSelectionLineHeight - 1em) / 2);
$ui_searchSelectionVerticalPadding= ($ui_selectionVerticalPadding - $ui_searchSelectionLineHeightOffset);
$ui_searchSelectionHorizontalPadding= $ui_selectionHorizontalPadding;
$ui_searchSelectionInputPadding= $ui_searchSelectionVerticalPadding $ui_selectionIconDistance $ui_searchSelectionVerticalPadding $ui_searchSelectionHorizontalPadding;

$ui_searchMobileMaxMenuHeight= $ui_selectionMobileMaxMenuHeight;
$ui_searchTabletMaxMenuHeight= $ui_selectionTabletMaxMenuHeight;
$ui_searchComputerMaxMenuHeight= $ui_selectionComputerMaxMenuHeight;
$ui_searchWidescreenMaxMenuHeight= $ui_selectionWidescreenMaxMenuHeight;

/* Inline */
$ui_inlineIconMargin= 0em $ui_relative7px 0em $ui_relative3px;
$ui_inlineTextColor= inherit;
$ui_inlineTextFontWeight= bold;
$ui_inlineMenuDistance= $ui_relative3px;
$ui_inlineMenuBorderRadius= $ui_borderRadius;


/*--------------
    Multiple
--------------*/

/* Split Actual Padding Between Child and Parent (allows for label spacing) */
$ui_multipleSelectionVerticalPadding= ($ui_searchSelectionVerticalPadding * (1/3));
$ui_multipleSelectionLeftPadding= $ui_relative5px;
$ui_multipleSelectionRightPadding= $ui_selectionIconDistance;
$ui_multipleSelectionPadding= $ui_multipleSelectionVerticalPadding $ui_multipleSelectionRightPadding $ui_multipleSelectionVerticalPadding $ui_multipleSelectionLeftPadding;

/* Child Elements */
$ui_multipleSelectionChildVerticalMargin= ($ui_searchSelectionVerticalPadding * (2/3));
$ui_multipleSelectionChildLeftMargin= ($ui_inputHorizontalPadding - $ui_multipleSelectionLeftPadding);
$ui_multipleSelectionChildMargin= $ui_multipleSelectionChildVerticalMargin 0em $ui_multipleSelectionChildVerticalMargin $ui_multipleSelectionChildLeftMargin;
$ui_multipleSelectionChildLineHeight= $ui_relative17px;
$ui_multipleSelectionSearchStartWidth= ($ui_glyphWidth * 2);

/* Dropdown Icon */
$ui_multipleSelectionDropdownIconMargin= '';
$ui_multipleSelectionDropdownIconPadding= '';

$ui_multipleSelectionSearchAfterLabelDistance= $ui_relative2px;

/* Selection Label */
$ui_labelSize= $ui_relativeMedium;
$ui_labelHorizontalMargin= $ui_4px;
$ui_labelVerticalMargin= $ui_2px;
$ui_labelMargin= $ui_labelVerticalMargin $ui_labelHorizontalMargin $ui_labelVerticalMargin 0em;
$ui_labelBorderWidth= 1px;
$ui_labelBoxShadow= 0px 0px 0px $ui_labelBorderWidth $ui_borderColor inset;

$ui_labelVerticalPadding= $ui_relative5px;
$ui_labelHorizontalPadding= $ui_relativeMini;
$ui_labelPadding= $ui_labelVerticalPadding $ui_labelHorizontalPadding;

/*-------------------
       States
--------------------*/

/* Hovered */
$ui_hoveredItemBackground= $ui_transparentBlack;
$ui_hoveredItemColor= $ui_selectedTextColor;
$ui_hoveredZIndex= $ui_menuZIndex + 2;

/* Default Text */
$ui_defaultTextColor= $ui_inputPlaceholderColor;
$ui_defaultTextFocusColor= $ui_inputPlaceholderFocusColor;

/* Loading */
$ui_loadingZIndex= -1;

/* Active Menu Item */
$ui_activeItemZIndex= $ui_menuZIndex + 1;
$ui_activeItemBackground= transparent;
$ui_activeItemBoxShadow= none;
$ui_activeItemFontWeight= bold;
$ui_activeItemColor= $ui_selectedTextColor;

/* Selected */
$ui_selectedBackground= $ui_subtleTransparentBlack;
$ui_selectedColor= $ui_selectedTextColor;

/* Error */
$ui_errorLabelBackground= #EACBCB;
$ui_errorLabelColor= $ui_errorTextColor;

$ui_errorItemTextColor= $ui_errorTextColor;
$ui_errorItemHoverBackground= #FFF2F2;
$ui_errorItemActiveBackground= #FDCFCF;

/*-------------------
      Variations
--------------------*/

/* Scrolling */
$ui_scrollingMenuWidth= 100%;
$ui_scrollingMenuItemBorder= none;
$ui_scrollingMenuRightItemPadding= unquote("calc((" + $ui_itemHorizontalPadding + ")~" + "(" + $ui_scrollbarWidth + "))");

$ui_scrollingMobileMaxItems= 4;
$ui_scrollingTabletMaxItems= 6;
$ui_scrollingComputerMaxItems= 8;
$ui_scrollingWidescreenMaxItems= 12;

$ui_scrollingBorderEMWidth= 0em; /* 0px / em size */
$ui_scrollingItemHeight= ($ui_itemVerticalPadding * 2) + $ui_itemLineHeight + $ui_scrollingBorderEMWidth;
$ui_scrollingMobileMaxMenuHeight= ($ui_scrollingItemHeight * $ui_scrollingMobileMaxItems);
$ui_scrollingTabletMaxMenuHeight= ($ui_scrollingItemHeight * $ui_scrollingTabletMaxItems);
$ui_scrollingComputerMaxMenuHeight= ($ui_scrollingItemHeight * $ui_scrollingComputerMaxItems);
$ui_scrollingWidescreenMaxMenuHeight= ($ui_scrollingItemHeight * $ui_selectionWidescreenMaxItems);

/* Upward */
$ui_upwardSelectionVisibleBorderRadius= $ui_selectionVisibleConnectingBorder $ui_selectionVisibleConnectingBorder $ui_borderRadius $ui_borderRadius;
$ui_upwardMenuBoxShadow= 0px 0px 3px 0px rgba(0, 0, 0, 0.08);
$ui_upwardSelectionMenuBoxShadow= 0px -2px 3px 0px rgba(0, 0, 0, 0.08);
$ui_upwardMenuBorderRadius= $ui_borderRadius $ui_borderRadius 0em 0em;
$ui_upwardSelectionHoverBoxShadow= 0px 0px 2px 0px rgba(0, 0, 0, 0.05);
$ui_upwardSelectionVisibleBoxShadow= 0px 0px 3px 0px rgba(0, 0, 0, 0.08);
$ui_upwardSelectionActiveHoverBoxShadow= 0px 0px 3px 0px rgba(0, 0, 0, 0.05);
$ui_upwardSelectionActiveHoverMenuBoxShadow= 0px -2px 3px 0px rgba(0, 0, 0, 0.08);

/* Flyout Direction */
$ui_leftMenuDropdownIconFloat= left;
$ui_leftMenuDropdownIconMargin= $ui_itemLineHeightOffset $ui_itemElementDistance 0em 0em;

/* Left */
$ui_leftSubMenuBorderRadius= $ui_borderRadius;

/* Simple */
$ui_simpleTransitionDuration= $ui_defaultDuration;
$ui_simpleTransition= opacity $ui_simpleTransitionDuration $ui_defaultEasing;

/* Floating */
$ui_floatingMenuDistance= 0.5em;
$ui_floatingMenuBoxShadow= $ui_floatingShadow;
$ui_floatingMenuBorderRadius= $ui_borderRadius;

/* Pointing */
$ui_pointingArrowOffset= -($ui_pointingArrowSize / 2);
$ui_pointingArrowDistanceFromEdge= 1em;

$ui_pointingArrowBackground= $ui_white;
$ui_pointingArrowZIndex= 2;
$ui_pointingArrowBoxShadow= - $ui_menuBorderWidth - $ui_menuBorderWidth 0px $ui_menuBorderWidth $ui_menuBorderColor;
$ui_pointingArrowSize= $ui_relative7px;

$ui_pointingMenuDistance= $ui_mini;
$ui_pointingMenuBorderRadius= $ui_borderRadius;
$ui_pointingArrowBoxShadow= - $ui_menuBorderWidth - $ui_menuBorderWidth 0px $ui_menuBorderWidth $ui_menuBorderColor;

/* Pointing Upward */
$ui_pointingUpwardMenuBorderRadius= $ui_borderRadius;
$ui_pointingUpwardArrowBoxShadow= $ui_menuBorderWidth $ui_menuBorderWidth 0px $ui_menuBorderWidth $ui_menuBorderColor;

