/*******************************
             Video
*******************************/

/*-------------------
       Element
--------------------*/

/* Simple */
$ui_background= $ui_lightGrey;
$ui_transitionDuration= 0.5s;
$ui_transitionEasing= $ui_defaultEasing;

/* Placeholder */
$ui_placeholderUnderlay= $ui_background;

/* Placeholder Overlayed Background */
$ui_placeholderBackground= radial-gradient(transparent 45%, rgba(0, 0, 0, 0.3));
$ui_placeholderBackgroundOpacity= 0.5;
$ui_placeholderBackgroundTransition= opacity $ui_transitionDuration $ui_transitionEasing;

/* Icon */
$ui_iconBackground= $ui_veryStrongTransparentBlack;
$ui_iconSize= 6rem;
$ui_iconTransition=opacity $ui_transitionDuration $ui_transitionEasing,
  color $ui_transitionDuration $ui_transitionEasing;
$ui_iconColor= $ui_white;
$ui_iconShadow=0px 2px 10px rgba(34, 36, 38, 0.2);
$ui_iconZIndex= 10;

/*-------------------
       States
--------------------*/

/* Hover */
$ui_hoverPlaceholderBackground= $ui_placeholderBackground;
$ui_hoverPlaceholderBackgroundOpacity= 1;
$ui_hoverIconColor= $ui_white;


/*-------------------
      Variations
--------------------*/

/* Aspect Ratios */
$ui_squareRatio= (1/1) * 100%;
$ui_widescreenRatio= (9/16) * 100%;
$ui_ultraWidescreenRatio= (9/21) * 100%;
$ui_standardRatio= (3/4) * 100%;
