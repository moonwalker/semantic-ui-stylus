/*******************************
             Shape
*******************************/

$ui_display= inline-block;

/* Animating */
$ui_perspective= 2000px;

$ui_duration= 0.6s;
$ui_easing= ease-in-out;

$ui_hiddenSideOpacity= 0.6;
$ui_animatingZIndex= 100;

$ui_transition=transform $ui_duration $ui_easing,
  left $ui_duration $ui_easing,
  width $ui_duration $ui_easing,
  height $ui_duration $ui_easing;
$ui_sideTransition= opacity $ui_duration $ui_easing;
$ui_backfaceVisibility= hidden;

/* Side */
$ui_sideMargin= 0em;

/*--------------
      Types
---------------*/

/* Cube */
$ui_cubeSize= 15em;
$ui_cubeBackground= #E6E6E6;
$ui_cubePadding= 2em;
$ui_cubeTextColor= $ui_textColor;
$ui_cubeBoxShadow= 0px 0px 2px rgba(0, 0, 0, 0.3);

$ui_cubeTextAlign= center;
$ui_cubeFontSize= 2em;

