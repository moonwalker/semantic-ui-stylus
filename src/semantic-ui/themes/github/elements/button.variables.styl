/*-------------------
   Button Variables
--------------------*/

/* Button Variables */
$ui_pageFont= Helvetica Neue, Helvetica, Arial, sans-serif;
$ui_textTransform= none;
$ui_fontWeight= bold;
$ui_textColor= #333333;

$ui_textShadow= 0px 1px 0px rgba(255, 255, 255, 0.9);
$ui_invertedTextShadow= 0px -1px 0px rgba(0, 0, 0, 0.25);

$ui_borderRadius= $ui_relativeBorderRadius;

$ui_verticalPadding= 0.75em;
$ui_horizontalPadding= 1.15em;

$ui_backgroundColor= #FAFAFA;
$ui_backgroundImage= linear-gradient(rgba(255, 255, 255, 0.15), rgba(0, 0, 0, 0.1));
$ui_boxShadow=0 -1px 0 0 rgba(0, 0, 0, 0.05) inset,
  0 0 0 1px rgba(0, 0, 0, 0.13) inset,
  0 1px 3px rgba(0, 0, 0, 0.05);

$ui_coloredBackgroundImage= linear-gradient(rgba(255, 255, 255, 0.2), rgba(0, 0, 0, 0.2));
$ui_coloredBoxShadow=0 -1px 0 0 rgba(0, 0, 0, 0.05) inset,
  0 0 0 1px rgba(0, 0, 0, 0.1) inset,
  0 1px 3px rgba(0, 0, 0, 0.05);

$ui_hoverBackgroundColor= #E0E0E0;
$ui_hoverBackgroundImage= linear-gradient(rgba(0, 0, 0, 0), rgba(0, 0, 0, 0.08));
$ui_hoverBoxShadow= $ui_boxShadow;

$ui_downBackgroundColor= '';
$ui_downBackgroundImage= '';
$ui_downBoxShadow=0 -1px 0 0 rgba(0, 0, 0, 0.05) inset,
  0 0 0 1px rgba(0, 0, 0, 0.13) inset,
  0 3px 5px rgba(0, 0, 0, 0.15) inset !important;
$ui_activeBackgroundColor= #DFDFDF;
$ui_activeBackgroundImage= none;
$ui_activeBoxShadow=0 -1px 0 0 rgba(0, 0, 0, 0.05) inset,
  0 0 0 1px rgba(0, 0, 0, 0.13) inset,
  0 3px 5px rgba(0, 0, 0, 0.1) inset !important;

$ui_labeledIconBackgroundColor= transparent;
$ui_labeledIconBorder= transparent;
$ui_labeledIconPadding= ($ui_horizontalPadding + 2.25em);

$ui_basicFontWeight= bold;
$ui_basicTextColor= $ui_linkColor;
$ui_basicHoverTextColor= $ui_linkHoverColor;

$ui_basicHoverBackground= #E0E0E0;

$ui_blue= #3072B3;
$ui_green= #60B044;
$ui_black= #5D5D5D;

$ui_primaryColor= $ui_blue;
$ui_secondaryColor= $ui_black;

$ui_mini= 0.6rem;
$ui_tiny= 0.7rem;
$ui_small= 0.85rem;
$ui_medium= 0.92rem;
$ui_large= 1rem;
$ui_big= 1.125rem;
$ui_huge= 1.25rem;
$ui_massive= 1.3rem;

